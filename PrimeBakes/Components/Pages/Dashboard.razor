@page "/"

<PageTitle>Dashboard - Prime Bakes</PageTitle>

@if (_isLoading)
{
	@if (_hasConnectionError)
	{
		<!-- Beautiful Connection Error UI -->
		<div class="error-container">
			<div class="error-card">
				<div class="error-header">
					<div class="error-icon-container">
						<div class="error-icon">
							<span class="wifi-icon">📶</span>
							<div class="connection-lines">
								<span class="line line-1"></span>
								<span class="line line-2"></span>
								<span class="line line-3"></span>
							</div>
						</div>
					</div>
					<h2 class="error-title">Connection Error</h2>
					<p class="error-subtitle">Unable to connect to the internet</p>
				</div>

				<div class="error-body">
					<div class="error-illustration">
						<div class="cloud-container">
							<div class="cloud cloud-1">☁️</div>
							<div class="cloud cloud-2">☁️</div>
							<div class="cloud cloud-3">⛅</div>
						</div>
						<div class="signal-waves">
							<div class="wave-line wave-1"></div>
							<div class="wave-line wave-2"></div>
							<div class="wave-line wave-3"></div>
						</div>
					</div>

					<div class="error-message">
						<div class="message-icon">🌐</div>
						<h3>No Internet Connection</h3>
						<p>Please check your internet connection and try again. Make sure you're connected to Wi-Fi or mobile data.</p>
					</div>

					<div class="troubleshooting-tips">
						<h4>Quick troubleshooting tips:</h4>
						<ul class="tips-list">
							<li>
								<span class="tip-icon">📱</span>
								<span>Check if mobile data or Wi-Fi is enabled</span>
							</li>
							<li>
								<span class="tip-icon">🔄</span>
								<span>Try turning airplane mode on and off</span>
							</li>
							<li>
								<span class="tip-icon">📍</span>
								<span>Move to an area with better signal</span>
							</li>
							<li>
								<span class="tip-icon">⚡</span>
								<span>Restart your device if the problem persists</span>
							</li>
						</ul>
					</div>
				</div>

				<div class="error-footer">
					<button @onclick="RetryConnection" class="retry-button">
						<span class="retry-icon">🔄</span>
						Try Again
					</button>
				</div>
			</div>

			<!-- Background Animation -->
			<div class="error-background">
				<div class="floating-particles">
					<div class="particle particle-1"></div>
					<div class="particle particle-2"></div>
					<div class="particle particle-3"></div>
					<div class="particle particle-4"></div>
					<div class="particle particle-5"></div>
				</div>
			</div>
		</div>
	}
	else if (_isLoadingText.Contains("Updating application"))
	{
		<!-- Beautiful Update UI -->
		<div class="update-container">
			<div class="update-card">
				<div class="update-header">
					<div class="update-icon-container">
						<div class="update-icon">
							<span class="download-arrow">⬇</span>
						</div>
					</div>
					<h2 class="update-title">Updating Prime Bakes</h2>
					<p class="update-subtitle">Please wait while we download the latest version</p>
				</div>

				<div class="update-body">
					<!-- Progress Ring -->
					<div class="progress-ring-container">
						<svg class="progress-ring" width="140" height="140">
							<circle class="progress-ring__circle-bg" cx="70" cy="70" r="60" />
							<circle class="progress-ring__circle" cx="70" cy="70" r="60"
									style="stroke-dasharray: @GetCircumference(); stroke-dashoffset: @GetStrokeOffset();" />
						</svg>
						<div class="progress-content">
							<span class="progress-percentage">@_progressPercentage%</span>
							<span class="progress-label">Downloaded</span>
						</div>
					</div>

					<!-- Progress Bar -->
					<div class="progress-bar-container">
						<div class="progress-bar">
							<div class="progress-fill" style="width: @(_progressPercentage)%"></div>
							<div class="progress-glow" style="left: @(_progressPercentage)%"></div>
						</div>
						<div class="progress-text">
							<span>@_isLoadingText</span>
							<span class="eta">@_estimatedTime</span>
						</div>
					</div>

					<!-- Fun Facts -->
					<div class="fun-facts">
						<div class="fact-container">
							<div class="fact-icon">💡</div>
							<p class="fun-fact">@_currentFunFact</p>
						</div>
					</div>

					<!-- Animated Elements -->
					<div class="update-animation">
						<div class="floating-dots">
							<span class="floating-dot" style="animation-delay: 0s;"></span>
							<span class="floating-dot" style="animation-delay: 0.5s;"></span>
							<span class="floating-dot" style="animation-delay: 1s;"></span>
							<span class="floating-dot" style="animation-delay: 1.5s;"></span>
						</div>
					</div>
				</div>

				<div class="update-footer">
					<div class="update-steps">
						<div class="step @(_progressPercentage >= 10 ? "completed" : "active")">
							<div class="step-icon">📦</div>
							<span>Downloading</span>
						</div>
						<div class="step @(_progressPercentage >= 100 ? "completed" : _progressPercentage >= 10 ? "active" : "")">
							<div class="step-icon">⚙️</div>
							<span>Installing</span>
						</div>
						<div class="step @(_progressPercentage >= 100 ? "active" : "")">
							<div class="step-icon">🚀</div>
							<span>Launch</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Background Animation -->
			<div class="background-animation">
				<div class="wave wave1"></div>
				<div class="wave wave2"></div>
				<div class="wave wave3"></div>
			</div>
		</div>
	}
	else
	{
		<!-- Regular Loading UI -->
		<div class="loader-container">
			<div class="circular-dots-loader">
				<span class="dot dot-1"></span>
				<span class="dot dot-2"></span>
				<span class="dot dot-3"></span>
			</div>
			<p class="loading-text">@_isLoadingText</p>
		</div>
	}
}
else
{
	<div class="dashboard-container">
		<div class="dashboard-header">
			<div class="logo-section">
				<img src="images/logo.png" alt="Prime Bakes Logo" class="dashboard-logo" />
				<span class="welcome-text">Welcome @_user.Name</span>
			</div>
			<div class="logout-section">
				<button @onclick="Logout" class="logout-button">
					<span class="logout-icon">⟲</span> Logout
				</button>
			</div>
		</div>

		<!-- Main Dashboard Cards -->
		<div class="dashboard-cards">
			@if (_user.Order)
			{
				<div class="dashboard-card orders-card" @onclick='() => NavManager.NavigateTo("/Order")'>
					<div class="card-background">
						<div class="card-icon orders-icon">📋</div>
						<div class="card-content">
							<h3>Orders</h3>
							<p>Place New Order</p>
						</div>
					</div>
				</div>
			}

			@if (_user.Sales)
			{
				<div class="dashboard-card sales-card" @onclick='() => NavManager.NavigateTo("/Sale")'>
					<div class="card-background">
						<div class="card-icon sales-icon">📈</div>
						<div class="card-content">
							<h3>Sales</h3>
							<p>Place New Sale</p>
						</div>
					</div>
				</div>
			}
		</div>

		<div class="dashboard-footer">
			<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
		</div>
	</div>
}

<style>
	:root {
		--primary-color: #e2137b;
		--primary-dark: #c10e69;
		--primary-light: #ff4d9f;
		--secondary-color: #2c3e50;
		--accent-color: #3498db;
		--success-color: #27ae60;
		--warning-color: #f39c12;
		--error-color: #e74c3c;
		--light-bg: #f8f9fa;
		--white: #ffffff;
		--text-dark: #2c3e50;
		--text-light: #7f8c8d;
		--border-color: #e1e8ed;
		--shadow: 0 4px 15px rgba(226, 19, 123, 0.1);
		--shadow-hover: 0 8px 25px rgba(226, 19, 123, 0.2);
		--border-radius: 16px;
		--gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
		--gradient-accent: linear-gradient(135deg, var(--accent-color) 0%, #2980b9 100%);
		--gradient-success: linear-gradient(135deg, var(--success-color) 0%, #229954 100%);
		--gradient-error: linear-gradient(135deg, var(--error-color) 0%, #c0392b 100%);
	}

	/* Error UI Styles */
	.error-container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		z-index: 1000;
	}

	.error-card {
		background: var(--white);
		border-radius: 24px;
		padding: 40px;
		max-width: 500px;
		width: 90%;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
		position: relative;
		z-index: 1001;
		animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		text-align: center;
	}

	.error-header {
		margin-bottom: 30px;
	}

	.error-icon-container {
		display: flex;
		justify-content: center;
		margin-bottom: 20px;
		position: relative;
	}

	.error-icon {
		width: 80px;
		height: 80px;
		background: var(--gradient-error);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 32px;
		color: var(--white);
		animation: errorPulse 2s infinite;
		position: relative;
	}

	.wifi-icon {
		animation: fadeInOut 2s infinite;
	}

	.connection-lines {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 60px;
		height: 60px;
	}

	.line {
		position: absolute;
		background: rgba(255, 255, 255, 0.3);
		border-radius: 2px;
		animation: connectionError 1.5s infinite;
	}

	.line-1 {
		width: 20px;
		height: 2px;
		top: 20px;
		left: 20px;
		animation-delay: 0s;
	}

	.line-2 {
		width: 2px;
		height: 20px;
		top: 10px;
		left: 29px;
		animation-delay: 0.5s;
	}

	.line-3 {
		width: 15px;
		height: 2px;
		top: 35px;
		left: 22px;
		animation-delay: 1s;
	}

	.error-title {
		font-size: 28px;
		font-weight: 700;
		color: var(--text-dark);
		margin-bottom: 8px;
		letter-spacing: -0.5px;
	}

	.error-subtitle {
		color: var(--text-light);
		font-size: 16px;
		margin: 0;
	}

	.error-body {
		margin-bottom: 30px;
	}

	.error-illustration {
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 30px;
		position: relative;
		height: 120px;
	}

	.cloud-container {
		display: flex;
		gap: 20px;
		align-items: center;
	}

	.cloud {
		font-size: 24px;
		animation: float 3s infinite ease-in-out;
		filter: grayscale(0.5);
	}

	.cloud-1 {
		animation-delay: 0s;
	}

	.cloud-2 {
		animation-delay: 1s;
		font-size: 20px;
	}

	.cloud-3 {
		animation-delay: 2s;
		font-size: 28px;
	}

	.signal-waves {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	.wave-line {
		position: absolute;
		width: 2px;
		background: var(--error-color);
		border-radius: 1px;
		opacity: 0.3;
		animation: signalError 2s infinite;
	}

	.wave-1 {
		height: 20px;
		left: -10px;
		animation-delay: 0s;
	}

	.wave-2 {
		height: 30px;
		left: 0px;
		animation-delay: 0.3s;
	}

	.wave-3 {
		height: 25px;
		left: 10px;
		animation-delay: 0.6s;
	}

	.error-message {
		background: linear-gradient(135deg, rgba(231, 76, 60, 0.05) 0%, rgba(192, 57, 43, 0.05) 100%);
		border-radius: 12px;
		padding: 20px;
		margin-bottom: 25px;
		border-left: 4px solid var(--error-color);
	}

	.message-icon {
		font-size: 24px;
		margin-bottom: 10px;
	}

	.error-message h3 {
		color: var(--text-dark);
		font-size: 18px;
		margin-bottom: 8px;
		font-weight: 600;
	}

	.error-message p {
		color: var(--text-light);
		font-size: 14px;
		line-height: 1.5;
		margin: 0;
	}

	.troubleshooting-tips {
		text-align: left;
		background: var(--light-bg);
		border-radius: 12px;
		padding: 20px;
	}

		.troubleshooting-tips h4 {
			color: var(--text-dark);
			font-size: 16px;
			margin-bottom: 15px;
			font-weight: 600;
		}

	.tips-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

		.tips-list li {
			display: flex;
			align-items: center;
			gap: 12px;
			margin-bottom: 12px;
			color: var(--text-dark);
			font-size: 14px;
			line-height: 1.4;
		}

	.tip-icon {
		font-size: 16px;
		flex-shrink: 0;
	}

	.error-footer {
		border-top: 1px solid var(--border-color);
		padding-top: 20px;
		text-align: center;
	}

	.retry-button {
		background: var(--gradient-error);
		color: var(--white);
		border: none;
		padding: 14px 28px;
		border-radius: 12px;
		cursor: pointer;
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		gap: 10px;
		font-size: 16px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
	}

		.retry-button:hover {
			transform: translateY(-2px);
			box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
		}

		.retry-button:active {
			transform: translateY(0);
		}

	.retry-icon {
		font-size: 18px;
		animation: spin 2s infinite linear;
	}

	/* Error Background Animation */
	.error-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1000;
		overflow: hidden;
	}

	.floating-particles {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	.particle {
		position: absolute;
		width: 6px;
		height: 6px;
		background: rgba(255, 255, 255, 0.3);
		border-radius: 50%;
		animation: particleFloat 10s infinite linear;
	}

	.particle-1 {
		top: 10%;
		left: 10%;
		animation-delay: 0s;
		animation-duration: 12s;
	}

	.particle-2 {
		top: 20%;
		left: 80%;
		animation-delay: 2s;
		animation-duration: 8s;
	}

	.particle-3 {
		top: 70%;
		left: 20%;
		animation-delay: 4s;
		animation-duration: 15s;
	}

	.particle-4 {
		top: 60%;
		left: 90%;
		animation-delay: 6s;
		animation-duration: 10s;
	}

	.particle-5 {
		top: 90%;
		left: 50%;
		animation-delay: 8s;
		animation-duration: 11s;
	}

	/* Update UI Styles */
	.update-container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		z-index: 1000;
	}

	.update-card {
		background: var(--white);
		border-radius: 24px;
		padding: 40px;
		max-width: 480px;
		width: 90%;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
		position: relative;
		z-index: 1001;
		animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.update-header {
		text-align: center;
		margin-bottom: 30px;
	}

	.update-icon-container {
		display: flex;
		justify-content: center;
		margin-bottom: 20px;
	}

	.update-icon {
		width: 80px;
		height: 80px;
		background: var(--gradient-primary);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 32px;
		color: var(--white);
		animation: pulse 2s infinite;
		position: relative;
		overflow: hidden;
	}

	.download-arrow {
		animation: bounce 1.5s infinite;
	}

	.update-title {
		font-size: 28px;
		font-weight: 700;
		color: var(--text-dark);
		margin-bottom: 8px;
		letter-spacing: -0.5px;
	}

	.update-subtitle {
		color: var(--text-light);
		font-size: 16px;
		margin: 0;
	}

	.update-body {
		margin-bottom: 30px;
	}

	/* Progress Ring */
	.progress-ring-container {
		position: relative;
		display: flex;
		justify-content: center;
		margin-bottom: 30px;
	}

	.progress-ring {
		transform: rotate(-90deg);
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
	}

	.progress-ring__circle-bg {
		stroke: #f0f0f0;
		stroke-width: 6;
		fill: transparent;
	}

	.progress-ring__circle {
		stroke: url(#progressGradient);
		stroke-width: 6;
		stroke-linecap: round;
		fill: transparent;
		transition: stroke-dashoffset 0.3s ease;
	}

	.progress-content {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		text-align: center;
	}

	.progress-percentage {
		display: block;
		font-size: 32px;
		font-weight: 700;
		color: var(--primary-color);
		line-height: 1;
	}

	.progress-label {
		display: block;
		font-size: 14px;
		color: var(--text-light);
		margin-top: 4px;
	}

	/* Progress Bar */
	.progress-bar-container {
		margin-bottom: 25px;
	}

	.progress-bar {
		width: 100%;
		height: 8px;
		background-color: #f0f0f0;
		border-radius: 4px;
		overflow: hidden;
		position: relative;
		margin-bottom: 10px;
	}

	.progress-fill {
		height: 100%;
		background: var(--gradient-primary);
		border-radius: 4px;
		transition: width 0.3s ease;
		position: relative;
	}

	.progress-glow {
		position: absolute;
		top: 0;
		width: 20px;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
		transform: translateX(-50%);
		animation: shimmer 2s infinite;
	}

	.progress-text {
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 14px;
	}

	.eta {
		color: var(--text-light);
		font-style: italic;
	}

	/* Fun Facts */
	.fun-facts {
		background: linear-gradient(135deg, rgba(226, 19, 123, 0.05) 0%, rgba(52, 152, 219, 0.05) 100%);
		border-radius: 12px;
		padding: 20px;
		margin-bottom: 20px;
		border-left: 4px solid var(--primary-color);
	}

	.fact-container {
		display: flex;
		align-items: flex-start;
		gap: 12px;
	}

	.fact-icon {
		font-size: 20px;
		flex-shrink: 0;
		margin-top: 2px;
	}

	.fun-fact {
		color: var(--text-dark);
		font-size: 14px;
		line-height: 1.5;
		margin: 0;
	}

	/* Update Steps */
	.update-footer {
		border-top: 1px solid var(--border-color);
		padding-top: 20px;
	}

	.update-steps {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.step {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 8px;
		opacity: 0.5;
		transition: all 0.3s ease;
	}

		.step.active {
			opacity: 1;
			color: var(--primary-color);
		}

		.step.completed {
			opacity: 1;
			color: var(--success-color);
		}

	.step-icon {
		font-size: 20px;
		transition: transform 0.3s ease;
	}

	.step.active .step-icon,
	.step.completed .step-icon {
		transform: scale(1.2);
	}

	.step span {
		font-size: 12px;
		font-weight: 500;
	}

	/* Floating Animation */
	.update-animation {
		position: absolute;
		top: 20px;
		right: 20px;
		opacity: 0.3;
	}

	.floating-dots {
		display: flex;
		gap: 8px;
	}

	.floating-dot {
		width: 8px;
