@page "/Inventory-Dashboard"

<PageTitle>Inventory Dashboard - Prime Bakes</PageTitle>

@if (_isLoading)
{
	<div class="loader-container">
		<div class="circular-dots-loader">
			<span class="dot dot-1"></span>
			<span class="dot dot-2"></span>
			<span class="dot dot-3"></span>
		</div>
		<p class="loading-text">Loading inventory dashboard...</p>
	</div>
}
else
{
	<div class="dashboard-container">
		<div class="dashboard-header">
			<div class="logo-section">
				<img src="images/logo.png" alt="Prime Bakes Logo" class="dashboard-logo" />
				<h1 class="dashboard-title">Prime Bakes</h1>
			</div>
			<div class="user-info">
				<span class="user-name">@_user?.Name</span>
				<button @onclick='() => NavManager.NavigateTo("/")' class="back-button">
					<span class="back-icon">🏠</span> Dashbaord
				</button>
			</div>
		</div>

		<div class="welcome-section">
			<h2>Inventory Management</h2>
			<p>Select an option below to manage inventory and stock operations</p>
		</div>

		<div class="dashboard-cards">
			@if (_userLocation?.MainLocation == true)
			{
				<div class="dashboard-card" @onclick='() => NavManager.NavigateTo("/Inventory/Purchase")'>
					<div class="card-icon purchase-icon">🛒</div>
					<h3>Raw Material Purchase</h3>
					<p>Create and manage purchase orders for raw materials</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavManager.NavigateTo("/Inventory/KitchenIssue")'>
					<div class="card-icon kitchen-icon">👨‍🍳</div>
					<h3>Kitchen Issue</h3>
					<p>Issue raw materials to kitchen for production</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavManager.NavigateTo("/Inventory/Kitchen-Production")'>
					<div class="card-icon production-icon">🍲</div>
					<h3>Kitchen Production</h3>
					<p>Record finished goods production from kitchen</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavManager.NavigateTo("/Inventory/RawMaterialStockAdjustment")'>
					<div class="card-icon stock-icon">📊</div>
					<h3>Raw Material Stock Adjustment</h3>
					<p>Adjust and manage raw material stock levels</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavManager.NavigateTo("/Inventory/Recipes")'>
					<div class="card-icon recipe-icon">📋</div>
					<h3>Recipes</h3>
					<p>Manage product recipes and formulations</p>
				</div>
			}

			<div class="dashboard-card" @onclick='() => NavManager.NavigateTo("/Inventory/ProductStockAdjustment")'>
				<div class="card-icon product-stock-icon">📦</div>
				<h3>Product Stock Adjustment</h3>
				<p>Adjust and manage finished product inventory</p>
			</div>
		</div>

		<div class="dashboard-footer">
			<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
		</div>
	</div>
}

<style>
	:root {
		--primary-color: #e2137b;
		--primary-dark: #c10e69;
		--primary-light: #ff4d9f;
		--secondary-color: #2c3e50;
		--accent-color: #3498db;
		--success-color: #27ae60;
		--warning-color: #f39c12;
		--error-color: #e74c3c;
		--light-bg: #f8f9fa;
		--white: #ffffff;
		--text-dark: #2c3e50;
		--text-light: #7f8c8d;
		--border-color: #e1e8ed;
		--shadow: 0 4px 15px rgba(226, 19, 123, 0.1);
		--shadow-hover: 0 8px 25px rgba(226, 19, 123, 0.2);
		--border-radius: 16px;
	}

	/* General Layout */
	body {
		margin: 0;
		padding: 0;
		background-color: var(--light-bg);
		color: var(--text-dark);
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		overflow-x: hidden;
	}

	.dashboard-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		padding: 20px;
		background: linear-gradient(135deg, rgba(226, 19, 123, 0.05) 0%, rgba(52, 152, 219, 0.05) 100%);
	}

	/* Header Styles */
	.dashboard-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 15px 25px;
		background: var(--white);
		border-radius: var(--border-radius);
		box-shadow: var(--shadow);
		margin-bottom: 30px;
		border: 1px solid var(--border-color);
	}

	.logo-section {
		display: flex;
		align-items: center;
	}

	.dashboard-logo {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		object-fit: cover;
		border: 2px solid var(--primary-color);
		margin-right: 15px;
	}

	.dashboard-title {
		color: var(--primary-color);
		font-size: 24px;
		font-weight: 700;
		margin: 0;
		letter-spacing: -0.5px;
	}

	.user-info {
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.user-name {
		font-weight: 600;
		color: var(--secondary-color);
		font-size: 16px;
	}

	.logout-button {
		background-color: transparent;
		border: 2px solid var(--primary-color);
		color: var(--primary-color);
		padding: 10px 16px;
		border-radius: 8px;
		cursor: pointer;
		font-weight: 600;
		display: flex;
		align-items: center;
		gap: 8px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		font-size: 14px;
	}

		.logout-button:hover {
			background-color: var(--primary-color);
			color: var(--white);
			transform: translateY(-2px);
		}

	.logout-icon {
		font-size: 16px;
	}

	/* Welcome Section */
	.welcome-section {
		text-align: center;
		margin-bottom: 40px;
	}

		.welcome-section h2 {
			color: var(--secondary-color);
			margin-bottom: 10px;
			font-size: 28px;
			font-weight: 700;
		}

		.welcome-section p {
			color: var(--text-light);
			font-size: 16px;
			margin-bottom: 20px;
		}

	/* Back button styles */
	.back-button {
		background-color: transparent;
		border: 2px solid var(--secondary-color);
		color: var(--secondary-color);
		padding: 10px 16px;
		border-radius: 8px;
		cursor: pointer;
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		gap: 8px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		font-size: 14px;
	}

		.back-button:hover {
			background-color: var(--secondary-color);
			color: var(--white);
			transform: translateY(-2px);
		}

	.back-icon {
		font-size: 16px;
	}

	/* Dashboard Cards */
	.dashboard-cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 25px;
		margin-bottom: 40px;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}

	.dashboard-card {
		background: var(--white);
		border-radius: var(--border-radius);
		padding: 30px;
		text-align: center;
		box-shadow: var(--shadow);
		cursor: pointer;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 220px;
		border: 1px solid var(--border-color);
		position: relative;
		overflow: hidden;
	}

		.dashboard-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: -100%;
			width: 100%;
			height: 100%;
			background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
			transition: left 0.5s;
		}

		.dashboard-card:hover::before {
			left: 100%;
		}

		.dashboard-card:hover {
			transform: translateY(-8px);
			box-shadow: var(--shadow-hover);
		}

	.card-icon {
		font-size: 48px;
		margin-bottom: 20px;
		width: 90px;
		height: 90px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		transition: all 0.3s ease;
	}

	.dashboard-card:hover .card-icon {
		transform: scale(1.1);
	}

	/* Custom icon styles for Prime Bakes theme */
	.purchase-icon {
		background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
		color: var(--white);
	}

	.kitchen-icon {
		background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
		color: var(--white);
	}

	.production-icon {
		background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
		color: var(--white);
	}

	.stock-icon {
		background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
		color: var(--white);
	}

	.product-stock-icon {
		background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
		color: var(--white);
	}

	.recipe-icon {
		background: linear-gradient(135deg, #1abc9c 0%, #16a085 100%);
		color: var(--white);
	}

	.reports-icon {
		background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
		color: var(--white);
	}

	.dashboard-card h3 {
		color: var(--text-dark);
		margin-bottom: 12px;
		font-size: 20px;
		font-weight: 700;
		letter-spacing: -0.3px;
	}

	.dashboard-card p {
		color: var(--text-light);
		font-size: 14px;
		margin: 0;
		line-height: 1.5;
		max-width: 250px;
	}

	/* Footer */
	.dashboard-footer {
		margin-top: auto;
		text-align: center;
		padding: 20px;
		color: var(--text-light);
		font-size: 14px;
	}

	.footer-link {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

		.footer-link:hover {
			color: var(--primary-dark);
			text-decoration: underline;
		}

	/* Loading Animation */
	.loader-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
		background: linear-gradient(135deg, rgba(226, 19, 123, 0.05) 0%, rgba(52, 152, 219, 0.05) 100%);
	}

	.circular-dots-loader {
		position: relative;
		width: 60px;
		height: 60px;
		margin-bottom: 15px;
	}

		.circular-dots-loader .dot {
			position: absolute;
			width: 12px;
			height: 12px;
			border-radius: 50%;
			animation: rotate 1.5s infinite linear;
		}

		.circular-dots-loader .dot-1 {
			background-color: var(--primary-color);
			animation-delay: 0s;
		}

		.circular-dots-loader .dot-2 {
			background-color: var(--accent-color);
			animation-delay: -0.5s;
		}

		.circular-dots-loader .dot-3 {
			background-color: var(--primary-dark);
			animation-delay: -1s;
		}

	.loading-text {
		color: var(--text-dark);
		font-size: 16px;
		margin-top: 10px;
		font-weight: 500;
	}

	/* Animations */
	@@keyframes rotate {
		0% {
			transform: rotate(0deg) translate(-24px) rotate(0deg);
		}

		100% {
			transform: rotate(360deg) translate(-24px) rotate(-360deg);
		}
	}

	/* Responsive Design */
	@@media (max-width: 768px) {
		.dashboard-container {
			padding: 15px;
		}

		.dashboard-header {
			flex-direction: column;
			gap: 15px;
			padding: 20px;
			text-align: center;
		}

		.dashboard-cards {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.dashboard-card {
			min-height: 200px;
			padding: 25px 20px;
		}

		.card-icon {
			width: 80px;
			height: 80px;
			font-size: 40px;
			margin-bottom: 15px;
		}

		.dashboard-card h3 {
			font-size: 18px;
		}

		.dashboard-card p {
			font-size: 13px;
		}

		.welcome-section h2 {
			font-size: 24px;
		}

		.welcome-section p {
			font-size: 14px;
		}
	}

	@@media (max-width: 480px) {
		.dashboard-container {
			padding: 10px;
		}

		.dashboard-header {
			padding: 15px;
		}

		.dashboard-logo {
			width: 40px;
			height: 40px;
		}

		.dashboard-title {
			font-size: 20px;
		}

		.user-name {
			font-size: 14px;
		}

		.logout-button {
			padding: 8px 12px;
			font-size: 12px;
		}

		.dashboard-cards {
			gap: 15px;
		}

		.dashboard-card {
			min-height: 180px;
			padding: 20px 15px;
		}

		.card-icon {
			width: 70px;
			height: 70px;
			font-size: 36px;
		}

		.welcome-section h2 {
			font-size: 22px;
		}
	}

	/* Accessibility */
	@@media (prefers-reduced-motion: reduce) {
		.dashboard-card, .logout-button, .back-button, .card-icon {
			transition: none;
			animation: none;
		}

			.dashboard-card::before {
				display: none;
			}
	}

	/* High contrast mode support */
	@@media (prefers-contrast: high) {
		.dashboard-card {
			border: 2px solid var(--text-dark);
		}
	}

	/* Focus styles for better accessibility */
	.dashboard-card:focus,
	.logout-button:focus,
	.back-button:focus {
		outline: 2px solid var(--primary-color);
		outline-offset: 2px;
	}
</style>