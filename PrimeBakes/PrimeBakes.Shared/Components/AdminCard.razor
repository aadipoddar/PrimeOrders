@* Admin Card Component for Management Panels *@

<div class="admin-card @CssClass" @onclick="OnClick" @onclick:preventDefault="true">
    <div class="admin-card-header">
        <div class="admin-card-icon @IconClass">
            @Icon
        </div>
    </div>
    <div class="admin-card-content">
        <h3 class="admin-card-title">@Title</h3>
        <p class="admin-card-description">@Description</p>
    </div>
    <div class="admin-card-footer">
        <div class="admin-card-action">
            <span class="action-text">@ActionText</span>
            <span class="action-arrow">→</span>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public string Icon { get; set; } = "⚙️";
    [Parameter] public string IconClass { get; set; } = string.Empty;
    [Parameter] public string ActionText { get; set; } = "Manage";
    [Parameter] public string CssClass { get; set; } = string.Empty;
    [Parameter] public EventCallback OnClick { get; set; }
}

<style>
    .admin-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
        min-height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .admin-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color, #e2137b), var(--primary-dark, #c10e69));
        transform: translateX(-100%);
        transition: transform 0.4s ease;
    }

    .admin-card:hover::before {
        transform: translateX(0);
    }

    .admin-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 60px rgba(226, 19, 123, 0.15);
        border-color: rgba(226, 19, 123, 0.2);
    }

    .admin-card:active {
        transform: translateY(-8px) scale(1.01);
    }

    .admin-card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
        position: relative;
    }

    .admin-card-icon {
        width: 70px;
        height: 70px;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        background: linear-gradient(135deg, rgba(226, 19, 123, 0.1) 0%, rgba(193, 14, 105, 0.1) 100%);
        color: var(--primary-color, #e2137b);
        position: relative;
        transition: all 0.3s ease;
    }

    .admin-card:hover .admin-card-icon {
        transform: rotate(5deg) scale(1.1);
        background: linear-gradient(135deg, rgba(226, 19, 123, 0.2) 0%, rgba(193, 14, 105, 0.15) 100%);
    }

    .admin-card-badge {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        color: white;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        position: absolute;
        top: -5px;
        right: -5px;
        animation: badgePulse 2s infinite;
    }

    .badge-count {
        line-height: 1;
    }

    .admin-card-content {
        flex: 1;
        margin-bottom: 20px;
    }

    .admin-card-title {
        font-size: 20px;
        font-weight: 700;
        color: #2c3e50;
        margin: 0 0 10px 0;
        letter-spacing: -0.3px;
        line-height: 1.2;
    }

    .admin-card-description {
        font-size: 14px;
        color: #666;
        margin: 0;
        line-height: 1.5;
        opacity: 0.9;
    }

    .admin-card-footer {
        border-top: 1px solid rgba(226, 19, 123, 0.1);
        padding-top: 15px;
        margin-top: auto;
    }

    .admin-card-action {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: var(--primary-color, #e2137b);
        font-weight: 600;
        font-size: 14px;
    }

    .action-text {
        transition: all 0.3s ease;
    }

    .action-arrow {
        font-size: 16px;
        transition: all 0.3s ease;
        font-weight: 700;
    }

    .admin-card:hover .action-arrow {
        transform: translateX(5px);
    }

    .admin-card:hover .action-text {
        color: var(--primary-dark, #c10e69);
    }

    /* Special icon classes */
    .outlet-icon {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 152, 0, 0.1) 100%) !important;
        color: #ff9800 !important;
    }

    .material-icon {
        background: linear-gradient(135deg, rgba(76, 175, 80, 0.15) 0%, rgba(139, 195, 74, 0.1) 100%) !important;
        color: #4caf50 !important;
    }

    .category-icon {
        background: linear-gradient(135deg, rgba(156, 39, 176, 0.15) 0%, rgba(123, 31, 162, 0.1) 100%) !important;
        color: #9c27b0 !important;
    }

    .product-icon {
        background: linear-gradient(135deg, rgba(33, 150, 243, 0.15) 0%, rgba(30, 136, 229, 0.1) 100%) !important;
        color: #2196f3 !important;
    }

    .user-icon {
        background: linear-gradient(135deg, rgba(233, 30, 99, 0.15) 0%, rgba(216, 27, 96, 0.1) 100%) !important;
        color: #e91e63 !important;
    }

    .kitchen-icon {
        background: linear-gradient(135deg, rgba(255, 87, 34, 0.15) 0%, rgba(244, 67, 54, 0.1) 100%) !important;
        color: #ff5722 !important;
    }

    @@keyframes badgePulse {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .admin-card {
            padding: 20px;
            min-height: 180px;
        }

        .admin-card-icon {
            width: 60px;
            height: 60px;
            font-size: 28px;
        }

        .admin-card-title {
            font-size: 18px;
        }

        .admin-card-description {
            font-size: 13px;
        }
    }

    @@media (max-width: 480px) {
        .admin-card {
            padding: 18px;
            min-height: 160px;
        }

        .admin-card-icon {
            width: 55px;
            height: 55px;
            font-size: 24px;
        }

        .admin-card-title {
            font-size: 16px;
        }
    }
</style>