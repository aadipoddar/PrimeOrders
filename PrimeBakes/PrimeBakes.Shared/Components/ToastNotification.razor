@using Syncfusion.Blazor.Notifications

<SfToast @ref="_sfToast" Timeout="5000">
    <ToastPosition X="Right" Y="Top" />
    <ToastShowAnimationSettings Effect="ToastEffect.SlideLeftIn" />
    <ToastHideAnimationSettings Effect="ToastEffect.SlideRightOut" />
</SfToast>

<style>
    /* Toast Success Styles */
    ::deep .e-toast-container .e-toast.e-toast-success {
        background-color: #10b981 !important;
        border-left: 4px solid #047857 !important;
    }

        ::deep .e-toast-container .e-toast.e-toast-success .e-toast-message .e-toast-title {
            color: #ffffff !important;
            font-weight: 600;
        }

        ::deep .e-toast-container .e-toast.e-toast-success .e-toast-message .e-toast-content {
            color: #ecfdf5 !important;
        }

        ::deep .e-toast-container .e-toast.e-toast-success .e-toast-close-icon {
            color: #ffffff !important;
        }

        ::deep .e-toast-container .e-toast.e-toast-success .e-toast-progress {
            background-color: #047857 !important;
        }

    /* Toast Error/Danger Styles */
