    ::deep .e-toast-container .e-toast.e-toast-info {
        background-color: #3b82f6 !important;
        border-left: 4px solid #2563eb !important;
    }

        ::deep .e-toast-container .e-toast.e-toast-info .e-toast-message .e-toast-title {
            color: #ffffff !important;
            font-weight: 600;
        }

        ::deep .e-toast-container .e-toast.e-toast-info .e-toast-message .e-toast-content {
