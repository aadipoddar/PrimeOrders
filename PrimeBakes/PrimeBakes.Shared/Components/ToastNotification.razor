        background-color: #ef4444 !important;
        border-left: 4px solid #b91c1c !important;
    }

        ::deep .e-toast-container .e-toast.e-toast-danger .e-toast-message .e-toast-title {
            color: #ffffff !important;
            font-weight: 600;
        }

        ::deep .e-toast-container .e-toast.e-toast-danger .e-toast-message .e-toast-content {
            color: #fef2f2 !important;
        }

        ::deep .e-toast-container .e-toast.e-toast-danger .e-toast-close-icon {
            color: #ffffff !important;
        }

        ::deep .e-toast-container .e-toast.e-toast-danger .e-toast-progress {
            background-color: #b91c1c !important;
        }

    /* Toast Warning Styles */
    ::deep .e-toast-container .e-toast.e-toast-warning {
        background-color: #f59e0b !important;
        border-left: 4px solid #d97706 !important;
    }

        ::deep .e-toast-container .e-toast.e-toast-warning .e-toast-message .e-toast-title {
            color: #ffffff !important;
            font-weight: 600;
        }

        ::deep .e-toast-container .e-toast.e-toast-warning .e-toast-message .e-toast-content {
