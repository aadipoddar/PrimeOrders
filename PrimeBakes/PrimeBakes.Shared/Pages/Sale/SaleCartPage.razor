@page "/Sale/Cart"
@using PrimeBakesLibrary.Data
@using PrimeBakesLibrary.Data.Common
@using PrimeBakesLibrary.Models.Common
@using PrimeBakesLibrary.Models.Sale

<PageTitle>Sale Cart - PrimeBakes</PageTitle>

@if (_isLoading)
{
	<div class="loader-container">
		<div class="circular-dots-loader">
			<span class="dot dot-1"></span>
			<span class="dot dot-2"></span>
			<span class="dot dot-3"></span>
		</div>
		<p class="loading-text">Loading Cart page...</p>
	</div>
}
else
{
	<div class="order-cart-container">
		<!-- Header -->
		<div class="page-header">
			<button @onclick='() => NavigationManager.NavigateTo("/Sale")' class="back-button" disabled="@_isSaving">
				←
			</button>
			<h1 class="page-title">Sale Cart</h1>
			<button @onclick='() => _saleDetailsDialogVisible = true' class="header-action-btn" disabled="@_isSaving">
				📄 Details
			</button>
		</div>

		<!-- Main Content -->
		<div class="main-content">
			@if (_cart.Any())
			{
				<div class="cart-card">
					<div class="card-header">
						<p class="item-count">@_cart.Sum(x => x.Quantity) items</p>
					</div>

					<div class="cart-grid-container">
						<SfGrid ID="_sfGrid"
								@ref="_sfGrid"
								EnableAdaptiveUI="true"
								DataSource="_cart"
								AllowPaging="true"
								AllowTextWrap=true
								AllowSorting="false"
								Height="auto"
								Toolbar="@(new List<string>() { "Search" })">

							<GridPageSettings PageSize="4" />

							<GridColumns>
								<GridColumn Field="@nameof(SaleProductCartModel.ProductName)" HeaderText="Product" Width="35%" />
								<GridColumn Field="@nameof(SaleProductCartModel.Quantity)" HeaderText="Quantity" Width="25%" TextAlign="TextAlign.Center">
									<Template>
										@{
											var item = (context as SaleProductCartModel);
										}
										@if (item is not null)
										{
											<div class="quantity-section">
												<div class="quantity-controls">
													<div class="quantity-input-wrapper">
														<SfNumericTextBox TValue="decimal"
																		  Value="@item.Quantity"
																		  ValueChanged="@((decimal value) => UpdateQuantity(item, value))"
																		  Min="0"
																		  Step="1"
																		  type="tel"
																		  ShowSpinButton=false
																		  Format="N0"
																		  Width="60px"
																		  CssClass="quantity-input"
																		  Enabled="@(!_isSaving)" />
													</div>
												</div>
											</div>
										}
									</Template>
								</GridColumn>
								<GridColumn HeaderText="Amount" Width="30%" TextAlign="TextAlign.Right">
									<Template>
										@{
											var item = (context as SaleProductCartModel);
										}
										@if (item is not null)
										{
											<div class="price-total-column">
												<div class="price-section">
													<span class="price-label">Price:</span>
													<span class="price-value">@item.Rate.FormatIndianCurrency()</span>
												</div>
												<div class="total-section">
													<span class="total-label">Total:</span>
													<span class="total-value">@item.Total.FormatIndianCurrency()</span>
												</div>
											</div>
										}
									</Template>
								</GridColumn>
								<GridColumn HeaderText="🖊️" Width="10%" TextAlign="TextAlign.Right">
									<Template>
										@{
											var item = (context as SaleProductCartModel);
										}
										@if (item is not null && item.Quantity > 0)
										{
											<button class="edit-button" @onclick="() => OpenProductDetailsDialog(item)" @onclick:stopPropagation="true" title="Edit Product Details" disabled="@_isSaving">
												<span class="edit-icon">⚙️</span>
											</button>
										}
									</Template>
								</GridColumn>
							</GridColumns>
						</SfGrid>
					</div>
				</div>
			}
			else
			{
				<div class="empty-cart">
					<div class="empty-icon">🛒</div>
					<h3>Your cart is empty</h3>
					<p>Add some items to your cart to continue</p>
					<button @onclick='() => NavigationManager.NavigateTo("/Sale")' class="continue-shopping-btn" disabled="@_isSaving">
						Continue Shopping
					</button>
				</div>
			}
		</div>

		<!-- Sticky Action Buttons - Only show when cart has items -->
		@if (_cart.Any())
		{
			<div class="action-buttons-footer">
				<div class="action-buttons">
					<button @onclick="ClearCart" class="clear-button" disabled="@_isSaving">
						🗑️ Clear Cart
					</button>
					<button @onclick="() => _saleConfirmationDialogVisible = true" class="confirm-button" disabled="@_isSaving">
						✓ Confirm Sale
					</button>
				</div>
			</div>
		}
	</div>

	<!-- Validation Error Dialog -->
	<SfDialog ID="_sfValidationErrorDialog"
			  @ref="_sfValidationErrorDialog"
			  Width="500px"
			  Height="auto"
			  AllowDragging="false"
			  EnableResize="false"
			  @bind-Visible="_validationErrorDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header error-header">
					<span class="error-icon">❌</span>
					<span>Validation Errors</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content error-content">
					<div class="error-message">
						<h3>Please fix the following errors before proceeding:</h3>
						<p>Review and correct the issues listed below to continue with your order.</p>
					</div>

					<div class="error-list">
						@foreach (var error in _validationErrors)
						{
							<div class="error-item">
								<div class="error-item-icon">⚠️</div>
								<div class="error-item-content">
									<div class="error-item-title">@error.Field</div>
									<div class="error-item-message">@error.Message</div>
								</div>
							</div>
						}
					</div>

					@if (_validationErrors.Count > 1)
					{
						<div class="error-summary">
							<span class="error-count">@_validationErrors.Count errors found</span>
						</div>
					}
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer error-footer">
					<SfButton Content="Fix Issues" OnClick="() => _validationErrorDialogVisible = false" CssClass="dialog-button error-fix-button" />
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Sale Details Dialog -->
	<SfDialog ID="_sfSaleDetailsDialog"
			  @ref="_sfSaleDetailsDialog"
			  Width="500px"
			  Height="auto"
			  AllowDragging="true"
			  EnableResize="false"
			  @bind-Visible="_saleDetailsDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header">
					<span>Sale Details</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content">
					<div class="form-group">
						<label>Sale Number</label>
						<SfTextBox Value="@_sale.BillNo"
								   Placeholder="Sale Number"
								   Readonly=true
								   CssClass="form-control" />
					</div>

					<div class="form-group">
						<label>Sale Date</label>
						<SfDatePicker @bind-Value="_sale.SaleDateTime"
									  Placeholder="Select Sale Date"
									  CssClass="form-control"
									  Enabled="@(!_isSaving)" />
					</div>

					<div class="form-group full-width">
						<label>Remarks</label>
						<SfTextBox @bind-Value="_sale.Remarks"
								   Placeholder="Add remarks (optional)"
								   Multiline="true"
								   CssClass="form-control"
								   Enabled="@(!_isSaving)" />
					</div>

					<!-- New Action Buttons Section -->
					<div class="dialog-action-buttons">
						<button @onclick="() => _discountDialogVisible = true" class="dialog-action-btn discount-btn" disabled="@_isSaving">
							<span class="action-icon">💰</span>
							<span>Discount</span>
						</button>
						<button @onclick="() => _customerDialogVisible = true" class="dialog-action-btn customer-btn" disabled="@_isSaving">
							<span class="action-icon">👤</span>
							<span>Customer</span>
						</button>
					</div>
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer">
					<SfButton Content="Close" OnClick="() => _saleDetailsDialogVisible = false" CssClass="dialog-button" Disabled="@_isSaving" />
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Discount Dialog -->
	<SfDialog ID="_sfDiscountDialog"
			  @ref="_sfDiscountDialog"
			  Width="500px"
			  Height="auto"
			  AllowDragging="true"
			  EnableResize="false"
			  @bind-Visible="_discountDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header">
					<span class="discount-icon">💰</span>
					<span>Discount Details</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content">
					<div class="form-group">
						<label>Discount Percentage</label>
						<SfNumericTextBox TValue="decimal"
										  @bind-Value="_sale.DiscPercent"
										  Min="0"
										  Max="100"
										  Step="1"
										  type="tel"
										  Format="N2"
										  Placeholder="Enter discount percentage"
										  CssClass="form-control"
										  Enabled="@(!_isSaving)" />
					</div>

					<div class="form-group">
						<label>Discount Amount</label>
						<div class="readonly-display">
							@_billDiscountAmount.FormatIndianCurrency()
						</div>
					</div>

					<div class="form-group full-width">
						<label>Discount Reason</label>
						<SfTextBox @bind-Value="_sale.DiscReason"
								   Placeholder="Add discount reason (optional)"
								   Multiline="true"
								   CssClass="form-control"
								   Enabled="@(!_isSaving)" />
					</div>

					<div class="discount-summary">
						<div class="summary-item">
							<span class="summary-label">Subtotal:</span>
							<span class="summary-value">@_baseTotal.FormatIndianCurrency()</span>
						</div>
						<div class="summary-item">
							<span class="summary-label">Discount:</span>
							<span class="summary-value discount-amount">-@_billDiscountAmount.FormatIndianCurrency()</span>
						</div>
						<div class="summary-item total-after-discount">
							<span class="summary-label">Total after Discount:</span>
							<span class="summary-value">@_total.FormatIndianCurrency()</span>
						</div>
					</div>
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer">
					<SfButton Content="Apply" OnClick="ApplyDiscount" CssClass="dialog-button primary-button" Disabled="@_isSaving" />
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Customer Dialog -->
	<SfDialog ID="_sfCustomerDialog"
			  @ref="_sfCustomerDialog"
			  Width="500px"
			  Height="auto"
			  AllowDragging="true"
			  EnableResize="false"
			  @bind-Visible="_customerDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header">
					<span class="customer-icon">👤</span>
					<span>Customer Details</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content">
					<div class="form-group">
						<label>Customer Phone Number</label>
						<SfTextBox Value="@_customer.Number"
								   Placeholder="Enter customer phone number"
								   CssClass="form-control"
								   Enabled="@(!_isSaving)"
								   ValueChanged="OnCustomerNumberChanged" />
					</div>

					<div class="form-group">
						<label>Customer Name</label>
						<SfTextBox @bind-Value="_customer.Name"
								   Placeholder="Enter customer name"
								   CssClass="form-control"
								   Enabled="@(!_isSaving)" />
					</div>

					@if (!string.IsNullOrEmpty(_customer.Number) && _customer.Id > 0)
					{
						<div class="customer-info-card">
							<div class="customer-info-header">
								<span class="info-icon">ℹ️</span>
								<span>Existing Customer Found</span>
							</div>
							<div class="customer-info-content">
								<div class="info-item">
									<span class="info-label">Customer ID:</span>
									<span class="info-value">#@_customer.Id</span>
								</div>
								<div class="info-item">
									<span class="info-label">Name:</span>
									<span class="info-value">@_customer.Name</span>
								</div>
								<div class="info-item">
									<span class="info-label">Phone:</span>
									<span class="info-value">@_customer.Number</span>
								</div>
							</div>
						</div>
					}
					else if (!string.IsNullOrEmpty(_customer.Number) || !string.IsNullOrEmpty(_customer.Name))
					{
						<div class="customer-info-card new-customer">
							<div class="customer-info-header">
								<span class="info-icon">✨</span>
								<span>New Customer</span>
							</div>
							<div class="customer-info-content">
								<p>This will be registered as a new customer.</p>
							</div>
						</div>
					}
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer">
					<SfButton Content="Clear" OnClick="ClearCustomer" CssClass="dialog-button clear-button" Disabled="@_isSaving" />
					<SfButton Content="Save" OnClick="SaveCustomer" CssClass="dialog-button primary-button" Disabled="@_isSaving" />
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Sale Confirmation Dialog -->
	<SfDialog ID="_sfSaleConfirmationDialog"
			  @ref="_sfSaleConfirmationDialog"
			  Width="450px"
			  Height="auto"
			  AllowDragging="false"
			  EnableResize="false"
			  @bind-Visible="_saleConfirmationDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header confirmation-header">
					<span class="confirmation-icon">⚠️</span>
					<span>Confirm Sale</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content confirmation-content">
					<div class="confirmation-message">
						<h3>Are you sure you want to place this sale?</h3>
						<p>This action cannot be undone. Please review your sale before confirming.</p>
					</div>

					<!-- Payment Mode Selection -->
					<div class="payment-mode-section">
						<div class="form-group">
							<label>Payment Mode</label>
							<SfComboBox TValue="int"
										TItem="PaymentModeModel"
										Placeholder="Select Payment Mode"
										DataSource="@_paymentModes"
										@bind-Value="_selectedPaymentModeId"
										CssClass="form-control payment-mode-combo">
								<ComboBoxFieldSettings Value="Id" Text="Name" />
							</SfComboBox>
						</div>
					</div>

					<div class="order-summary">
						<div class="summary-item">
							<span class="summary-label">Total Items:</span>
							<span class="summary-value">@_cart.Sum(x => x.Quantity)</span>
						</div>
						<div class="summary-item">
							<span class="summary-label">Sale Date:</span>
							<span class="summary-value">@_sale.SaleDateTime.ToShortDateString()</span>
						</div>
						@if (!string.IsNullOrEmpty(_customer.Name))
						{
							<div class="summary-item">
								<span class="summary-label">Customer:</span>
								<span class="summary-value">@_customer.Name</span>
							</div>
						}

						<div class="summary-item subtotal-summary">
							<span class="summary-label">Subtotal:</span>
							<span class="summary-value">@_afterTax.FormatIndianCurrency()</span>
						</div>

						@if (_sale.DiscPercent > 0)
						{
							<div class="summary-item">
								<span class="summary-label">Discount:</span>
								<span class="summary-value discount-amount">@_sale.DiscPercent% (-@_billDiscountAmount.FormatIndianCurrency())</span>
							</div>
						}

						<!-- Round Off Section with Interactive Input -->
						<div class="round-off-section">
							<label class="round-off-label">Round Off Adjustment:</label>
							<SfNumericTextBox TValue="decimal"
											  Value="@_sale.RoundOff"
											  ValueChanged="OnRoundOffChanged"
											  Format="N2"
											  type="tel"
											  Placeholder="Enter round off amount"
											  CssClass="round-off-input"
											  Enabled="@(!_isSaving)" />
						</div>
						
						<div class="summary-item total-summary">
							<span class="summary-label">Final Total:</span>
							<span class="summary-value">@_total.FormatIndianCurrency()</span>
						</div>
					</div>
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer confirmation-footer">
					<SfButton Content="No, Cancel" OnClick="CloseConfirmSaleDialog" CssClass="dialog-button cancel-button" Disabled="@_isSaving" />
					<SfButton Content="@(_isSaving ? "⏳ Saving Sale..." : "Place Sale")" OnClick="() => SaveSale()" CssClass="dialog-button confirm-button-dialog" Disabled="@_isSaving" />
					<SfButton Content="@(_isSaving ? "⏳ Saving Sale..." : "Thermal Sale")" OnClick="() => SaveSale(true)" CssClass="dialog-button confirm-button-dialog" Disabled="@_isSaving" />
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Product Details Dialog -->
	<SfDialog ID="_sfProductDetailsDialog"
			  @ref="_sfProductDetailsDialog"
			  Width="500px"
			  Height="auto"
			  AllowDragging="true"
			  EnableResize="false"
			  @bind-Visible="_productDetailsDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header">
					<span class="product-icon">📦</span>
					<span>Edit Product Details</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content">
					@if (_selectedProductForEdit != null)
					{
						<div class="product-info-section">
							<h4 class="product-title">@_selectedProductForEdit.ProductName</h4>
							<div class="product-summary">
								<span class="summary-item">Qty: <strong>@_selectedProductForEdit.Quantity.ToString("N0")</strong></span>
								<span class="summary-item">Rate: <strong>₹@_selectedProductForEdit.Rate.ToString("N2")</strong></span>
								<span class="summary-item">Total: <strong>₹@_selectedProductForEdit.Total.ToString("N2")</strong></span>
							</div>
						</div>

						<div class="action-buttons-section">
							<button class="detail-action-button basic-button" @onclick="() => OpenBasicDetails()" disabled="@_isSaving">
								<span class="button-icon">📋</span>
								<span class="button-text">Basic</span>
								<span class="button-description">Edit basic product info</span>
							</button>

							<button class="detail-action-button discount-button" @onclick="() => OpenDiscountDetails()" disabled="@_isSaving">
								<span class="button-icon">💰</span>
								<span class="button-text">Discount</span>
								<span class="button-description">Apply discounts</span>
							</button>

							<button class="detail-action-button tax-button" @onclick="() => OpenTaxDetails()" disabled="@_isSaving">
								<span class="button-icon">🧾</span>
								<span class="button-text">Tax</span>
								<span class="button-description">Configure tax settings</span>
							</button>
						</div>
					}
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer">
					<SfButton Content="Close" OnClick="() => _productDetailsDialogVisible = false" CssClass="dialog-button" Disabled="@_isSaving" />
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Basic Info Dialog -->
	<SfDialog ID="_sfBasicInfoDialog"
			  @ref="_sfBasicInfoDialog"
			  Width="600px"
			  Height="auto"
			  AllowDragging="true"
			  EnableResize="false"
			  @bind-Visible="_basicInfoDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header">
					<span class="product-icon">📋</span>
					<span>Basic Info: </span>
					<span class="material-name">@_selectedProductForEdit?.ProductName</span>
				</div>
			</Header>
			<Content>
				<div class="dialog-content">
					@if (_selectedProductForEdit != null)
					{
						<div class="form-row">
							<div class="form-group">
								<label>Rate (₹)</label>
								<SfNumericTextBox TValue="decimal"
												  Value="_selectedProductForEdit.Rate"
												  ValueChanged="OnBasicRateChanged"
												  Min="0"
												  type="tel"
												  Format="N2"
												  CssClass="form-control" 
												  Enabled="@(!_isSaving)" />
							</div>

							<div class="form-group">
								<label>Quantity</label>
								<SfNumericTextBox TValue="decimal"
												  Value="_selectedProductForEdit.Quantity"
												  ValueChanged="OnBasicQuantityChanged"
												  Min="0"
												  type="tel"
												  Format="N2"
												  CssClass="form-control" 
												  Enabled="@(!_isSaving)" />
							</div>
						</div>

						<div class="basic-summary">
							<div class="summary-card">
								<div class="summary-row">
									<span class="summary-label">Rate:</span>
									<span class="summary-value">@_selectedProductForEdit.Rate.FormatIndianCurrency()</span>
								</div>
								<div class="summary-row">
									<span class="summary-label">Quantity:</span>
									<span class="summary-value">@_selectedProductForEdit.Quantity.ToString("N2")</span>
								</div>
								<div class="summary-divider"></div>
								<div class="summary-row total-row">
									<span class="summary-label">Base Total:</span>
									<span class="summary-value total-value">@((_selectedProductForEdit.Rate * _selectedProductForEdit.Quantity).FormatIndianCurrency())</span>
								</div>
							</div>
						</div>
					}
				</div>
			</Content>
			<FooterTemplate>
				<div class="dialog-footer">
					<div class="footer-buttons">
						<SfButton Content="Save" IsPrimary="true" OnClick="OnSaveBasicInfoClick" CssClass="dialog-button" Disabled="@_isSaving" />
					</div>
				</div>
			</FooterTemplate>
		</DialogTemplates>
	</SfDialog>

	<!-- Discount Details Dialog -->
	<SfDialog ID="_sfDiscountDetailsDialog"
			  @ref="_sfDiscountDetailsDialog"
			  Width="600px"
			  Height="auto"
			  AllowDragging="true"
			  EnableResize="false"
			  @bind-Visible="_discountDetailsDialogVisible"
			  IsModal="true">
		<DialogPositionData X="Center" Y="Center" />
		<DialogTemplates>
			<Header>
				<div class="dialog-header">
					<span class="product-icon">💰</span>
					<span>Discount Details: </span>
