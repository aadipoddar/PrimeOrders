@page "/admin/financial-year"

@using PrimeBakesLibrary.Models.Accounts.Masters

<PageTitle>Financial Year Management - Prime Bakes</PageTitle>

@if (_isLoading)
{
    <SfSpinner @bind-Visible="_isLoading" Label="Page is Loading, Please Wait" />
}
else
{
    <PageHeader Title="Financial Year Management" Subtitle="Manage financial years and periods"
                ShowHome="true" ShowBack="true"
                OnHomeClick="@(() => NavigationManager.NavigateTo(PageRouteNames.Dashboard))"
                OnBackClick="@(() => NavigationManager.NavigateTo(PageRouteNames.AdminDashboard))">
        <RightContent>
            <button class="btn-icon btn-icon-excel" @onclick="ExportExcel" disabled="@_isProcessing"
                title="Export to Excel (Ctrl + E)">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <line x1="16" y1="13" x2="8" y2="13" />
                    <line x1="16" y1="17" x2="8" y2="17" />
                    <polyline points="10 9 9 9 8 9" />
                </svg>
            </button>
            <button class="btn-icon btn-icon-pdf" @onclick="ExportPdf" disabled="@_isProcessing" title="Export to PDF (Ctrl + P)">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <line x1="16" y1="13" x2="8" y2="13" />
                    <line x1="16" y1="17" x2="8" y2="17" />
                    <line x1="10" y1="9" x2="8" y2="9" />
                </svg>
            </button>
            <button class="btn-icon btn-icon-save" @onclick="SaveFinancialYear" disabled="@_isProcessing"
                title="Save Financial Year (Ctrl + S)">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z" />
                    <polyline points="17 21 17 13 7 13 7 21" />
                    <polyline points="7 3 7 8 15 8" />
                </svg>
            </button>
            <button class="btn-icon btn-icon-generate" @onclick="AutoGenerateNextYear" disabled="@_isProcessing"
                title="Auto Generate Next Year">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 2v6h-6" />
                    <path d="M3 12a9 9 0 0 1 15-6.7L21 8" />
                    <path d="M3 22v-6h6" />
                    <path d="M21 12a9 9 0 0 1-15 6.7L3 16" />
                </svg>
            </button>
            <button class="btn-icon" @onclick='() => NavigationManager.NavigateTo(PageRouteNames.AdminFinancialYear, true)'
                title="New Financial Year (Ctrl + N)" disabled="@_isProcessing">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="5" x2="12" y2="19" />
                    <line x1="5" y1="12" x2="19" y2="12" />
                </svg>
            </button>
        </RightContent>
    </PageHeader>

    <!-- Main Content Container -->
    <div class="purchase-container">

        <!-- Financial Year Entry Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-title-wrapper">
                    <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 15v4c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2v-4M17 9l-5 5-5-5M12 12.8V2.5" />
                    </svg>
                    <h2 class="section-title">Financial Year Details</h2>
                </div>
            </div>
            <div class="section-body">
                <div class="form-grid-five">
                    <!-- Start Date -->
                    <div class="form-field">
                        <label class="field-label">Start Date <span class="required">*</span></label>
                        <SfDatePicker @bind-Value="_financialYear.StartDate" Placeholder="Select start date"
                            FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" Format="dd-MMM-yyyy" />
                    </div>

                    <!-- End Date -->
                    <div class="form-field">
                        <label class="field-label">End Date <span class="required">*</span></label>
                        <SfDatePicker @bind-Value="_financialYear.EndDate" Placeholder="Select end date"
                            FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" Format="dd-MMM-yyyy" />
                    </div>

                    <!-- Year No -->
                    <div class="form-field">
                        <label class="field-label">Year No <span class="required">*</span></label>
                        <SfNumericTextBox @bind-Value="_financialYear.YearNo" Placeholder="Enter year number"
                            FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" Format="N0" Decimals="0"
                            Min="1" />
                    </div>

                    <!-- Locked Checkbox -->
                    <div class="form-field">
                        <label class="field-label">Locked</label>
                        <SfCheckBox @bind-Checked="_financialYear.Locked" Label="Is Locked" CssClass="custom-checkbox" />
                    </div>

                    <!-- Remarks -->
                    <div class="form-field">
                        <label class="field-label">Remarks</label>
                        <SfTextBox @bind-Value="_financialYear.Remarks" Placeholder="Enter remarks (optional)"
                            Multiline="true" FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Financial Years List Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-title-wrapper">
                    <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 11l3 3L22 4" />
                        <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                    </svg>
                    <h2 class="section-title">Financial Years List</h2>
                </div>
                <div class="header-actions">
                    <button class="btn-toggle-deleted @(_showDeleted ? "active" : "")" @onclick="ToggleDeleted"
                        title="@(_showDeleted ? "Hide Deleted Financial Years" : "Show Deleted Financial Years")"
                        disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6" />
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                            <line x1="10" y1="11" x2="10" y2="17" />
                            <line x1="14" y1="11" x2="14" y2="17" />
                        </svg>
                        @(_showDeleted ? "Hide Deleted" : "Show Deleted")
                    </button>
                </div>
            </div>
            <div class="section-body grid-body">
                <SfGrid @ref="_sfGrid" DataSource="@_financialYears" AllowPaging="true" AllowSorting="true"
                    AllowFiltering="true" AllowResizing="true" CssClass="professional-grid"
                    Toolbar="@(new List<string>() { "Search" })">
                    <GridPageSettings PageSize="20" PageSizes="@(new int[] { 20, 50, 100, 200 })" />
                    <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />
                    <GridColumns>
                        <GridColumn HeaderText="Actions" Width="120" TextAlign="TextAlign.Center" AllowFiltering="false">
                            <Template>
                                @{
                                    var financialYear = (context as FinancialYearModel);

                                    <div class="grid-actions">
                                        @if (financialYear.Status)
                                        {
                                            <button class="btn-grid-action btn-edit"
                                                @onclick="() => OnEditFinancialYear(financialYear)" title="Edit (Insert)">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
                                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                    stroke-linejoin="round">
                                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                                </svg>
                                            </button>

                                            <button class="btn-grid-action btn-delete"
                                                @onclick='() => ShowDeleteConfirmation(financialYear.Id, GetFinancialYearName(financialYear))'
                                                title="Delete (Delete)">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
                                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                    stroke-linejoin="round">
                                                    <polyline points="3 6 5 6 21 6" />
                                                    <path
                                                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                                    <line x1="10" y1="11" x2="10" y2="17" />
                                                    <line x1="14" y1="11" x2="14" y2="17" />
                                                </svg>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn-grid-action btn-recover"
                                                @onclick='() => ShowRecoverConfirmation(financialYear.Id, GetFinancialYearName(financialYear))'
                                                title="Recover (Delete)">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                    stroke-linejoin="round">
                                                    <polyline points="23 4 23 10 17 10"></polyline>
                                                    <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
                                                </svg>
                                            </button>
                                        }
                                    </div>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(FinancialYearModel.Id)" HeaderText="ID" Width="80"
                            TextAlign="TextAlign.Center" />
                        <GridColumn Field="@nameof(FinancialYearModel.StartDate)" HeaderText="Start Date" Width="150"
                            TextAlign="TextAlign.Center" Format="dd-MMM-yyyy" />
                        <GridColumn Field="@nameof(FinancialYearModel.EndDate)" HeaderText="End Date" Width="150"
                            TextAlign="TextAlign.Center" Format="dd-MMM-yyyy" />
                        <GridColumn Field="@nameof(FinancialYearModel.YearNo)" HeaderText="Year No" Width="100"
                            TextAlign="TextAlign.Center" />
                        <GridColumn Field="@nameof(FinancialYearModel.Remarks)" HeaderText="Remarks" Width="250" />
                        <GridColumn Field="@nameof(FinancialYearModel.Locked)" HeaderText="Locked" Width="100"
                            TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    var financialYear = (context as FinancialYearModel);
                                    <div class="grid-checkbox"
                                        style="@(financialYear.Locked ? "color: #f59e0b; background: #fef3c7;" : "color: #64748b; background: #f1f5f9;")">
                                        @(financialYear.Locked ? "🔒" : "🔓")
                                    </div>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(FinancialYearModel.Status)" HeaderText="Status" Width="100"
                            TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    var financialYear = (context as FinancialYearModel);
                                    <div class="grid-checkbox"
                                        style="@(financialYear.Status ? "color: #10b981; background: #d1fae5;" : "color: #dc2626; background: #fee2e2;")">
                                        @(financialYear.Status ? "✓" : "✗")
                                    </div>
                                }
                            </Template>
                        </GridColumn>
                    </GridColumns>
                </SfGrid>
            </div>
        </div>

    </div>
}

<!-- Delete Confirmation Dialog -->
<SfDialog @ref="_deleteConfirmationDialog" Width="500px" IsModal="true" ShowCloseIcon="true"
    @bind-Visible="_isDeleteDialogVisible">
    <DialogTemplates>
        <Header>
            <div style="display: flex; align-items: center; gap: 12px; padding: 4px 0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    style="color: #ef4444;">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="12" y1="8" x2="12" y2="12" />
                    <line x1="12" y1="16" x2="12.01" y2="16" />
                </svg>
                <span style="font-size: 18px; font-weight: 600; color: #0f172a;">Confirm Delete</span>
            </div>
        </Header>
        <Content>
            <div style="padding: 24px;">
                <p style="margin: 0 0 16px 0; font-size: 15px; color: #334155; line-height: 1.6;">
                    Are you sure you want to delete this Financial Year?
                </p>
                <div
                    style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 16px; margin-bottom: 20px;">
                    <p style="margin: 0 0 8px 0; font-size: 14px; color: #991b1b; font-weight: 600;">
                        Financial Year Details:
                    </p>
                    <p style="margin: 0; font-size: 13px; color: #7f1d1d; line-height: 1.5;">
                        <strong>Period:</strong> @_deleteFinancialYearName
                    </p>
                </div>
                <div
                    style="background: #fffbeb; border-left: 4px solid #f59e0b; border-radius: 6px; padding: 12px; margin-bottom: 20px;">
                    <p style="margin: 0; font-size: 13px; color: #92400e; line-height: 1.6;">
                        <strong>Note:</strong> This financial year will be marked as deleted. You can recover it later.
                    </p>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                    <button class="dialog-btn dialog-btn-cancel" @onclick="CancelDelete" disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="18" y1="6" x2="6" y2="18" />
                            <line x1="6" y1="6" x2="18" y2="18" />
                        </svg>
                        <span>Cancel</span>
                    </button>
                    <button class="dialog-btn dialog-btn-delete" @onclick="ConfirmDelete" disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6" />
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                            <line x1="10" y1="11" x2="10" y2="17" />
                            <line x1="14" y1="11" x2="14" y2="17" />
                        </svg>
                        <span>Delete</span>
                    </button>
                </div>
            </div>
        </Content>
    </DialogTemplates>
</SfDialog>

<!-- Recover Confirmation Dialog -->
<SfDialog @ref="_recoverConfirmationDialog" Width="500px" IsModal="true" ShowCloseIcon="true"
    @bind-Visible="_isRecoverDialogVisible">
    <DialogTemplates>
        <Header>
            <div style="display: flex; align-items: center; gap: 12px; padding: 4px 0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    style="color: #10b981;">
                    <polyline points="23 4 23 10 17 10"></polyline>
                    <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
                </svg>
                <span style="font-size: 18px; font-weight: 600; color: #0f172a;">Confirm Recover</span>
            </div>
        </Header>
        <Content>
            <div style="padding: 24px;">
                <p style="margin: 0 0 16px 0; font-size: 15px; color: #334155; line-height: 1.6;">
                    Are you sure you want to recover this financial year?
                </p>
                <div
                    style="background: #ecfdf5; border: 1px solid #a7f3d0; border-radius: 8px; padding: 16px; margin-bottom: 20px;">
                    <p style="margin: 0 0 8px 0; font-size: 14px; color: #065f46; font-weight: 600;">
                        Financial Year Details:
                    </p>
                    <p style="margin: 0; font-size: 13px; color: #047857; line-height: 1.5;">
                        <strong>Period:</strong> @_recoverFinancialYearName
                    </p>
                </div>
                <div
                    style="background: #dbeafe; border-left: 4px solid #3b82f6; border-radius: 6px; padding: 12px; margin-bottom: 20px;">
                    <p style="margin: 0; font-size: 13px; color: #1e40af; line-height: 1.6;">
                        <strong>Note:</strong> This will recover the financial year and make it available again.
                    </p>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                    <button class="dialog-btn dialog-btn-cancel" @onclick="CancelRecover" disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="18" y1="6" x2="6" y2="18" />
                            <line x1="6" y1="6" x2="18" y2="18" />
                        </svg>
                        <span>Cancel</span>
                    </button>
                    <button class="dialog-btn dialog-btn-recover" @onclick="ConfirmRecover" disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="23 4 23 10 17 10"></polyline>
                            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
                        </svg>
                        <span>Recover</span>
                    </button>
                </div>
            </div>
        </Content>
    </DialogTemplates>
</SfDialog>

<!-- Toast Notifications -->
<SfToast @ref="_sfSuccessToast" CssClass="e-toast-success" ShowCloseButton="true" Target="body" Timeout="5000">
    <ToastPosition X="Right" Y="Top" />
</SfToast>
<SfToast @ref="_sfErrorToast" CssClass="e-toast-danger" ShowCloseButton="true" Target="body" Timeout="8000">
    <ToastPosition X="Right" Y="Top" />
</SfToast>

<style>
    * {
        box-sizing: border-box;
    }

    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e2e8f0;
        background: #ffffff;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        color: #64748b;
    }

    .btn-icon:hover {
        background: #f8fafc;
        border-color: #3b82f6;
        color: #3b82f6;
    }

    .btn-icon:active {
        transform: scale(0.95);
    }

    .btn-icon-excel {
        color: #10b981;
        border-color: #10b981;
    }

    .btn-icon-excel:hover {
        background: #ecfdf5;
        border-color: #059669;
        color: #059669;
    }

    .btn-icon-excel:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .btn-icon-pdf {
        color: #ef4444;
        border-color: #ef4444;
    }

    .btn-icon-pdf:hover {
        background: #fef2f2;
        border-color: #dc2626;
        color: #dc2626;
    }

    .btn-icon-pdf:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .btn-icon-save {
        color: #10b981;
        border-color: #10b981;
    }

    .btn-icon-save:hover {
        background: #ecfdf5;
        border-color: #059669;
        color: #059669;
    }

    .btn-icon-save:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Main Container */
    .purchase-container {
        padding: 24px 32px;
        max-width: 1920px;
        margin: 0 auto;
        background: linear-gradient(to bottom, #f8fafc 0%, #f1f5f9 100%);
        min-height: calc(100vh - 72px);
    }

    /* Section Card */
    .section-card {
        background: #ffffff;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 24px;
        overflow: hidden;
    }

    .section-header {
        padding: 20px 24px;
        border-bottom: 2px solid #e2e8f0;
        background: linear-gradient(to bottom, #ffffff 0%, #f8fafc 100%);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .section-title-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .header-actions {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .section-icon {
        color: #3b82f6;
        flex-shrink: 0;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #0f172a;
        margin: 0;
        letter-spacing: -0.3px;
    }

    .section-body {
        padding: 24px;
    }

    /* Form Grid */
    .form-grid-triple {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
        align-items: start;
    }

    .form-grid-five {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 16px;
        align-items: start;
    }

    .form-field {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .form-field-span-2 {
        grid-column: span 2;
    }

    .form-field-span-3 {
        grid-column: span 3;
    }

    .field-label {
        font-size: 12px;
        font-weight: 600;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        margin-bottom: 2px;
    }

    .required {
        color: #dc2626;
        margin-left: 2px;
    }

    /* Grid Body */
    .grid-body {
        padding: 0;
    }

    .professional-grid {
        border: none;
    }

    /* Grid Actions */
    .grid-actions {
        display: flex;
        gap: 8px;
        justify-content: center;
        align-items: center;
    }

    .btn-grid-action {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid;
        background: #ffffff;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-grid-action:hover {
        transform: translateY(-2px);
