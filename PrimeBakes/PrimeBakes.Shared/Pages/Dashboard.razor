@page "/"
@implements IDisposable

<PageTitle>Dashboard - Prime Bakes</PageTitle>

@if (_isLoading || _user is null)
{
	@if (_hasConnectionError)
	{
		<!-- Beautiful Connection Error UI -->
		<div class="error-container">
			<div class="error-card">
				<div class="error-header">
					<div class="error-icon-container">
						<div class="error-icon">
							<span class="wifi-icon">📶</span>
							<div class="connection-lines">
								<span class="line line-1"></span>
								<span class="line line-2"></span>
								<span class="line line-3"></span>
							</div>
						</div>
					</div>
					<h2 class="error-title">Connection Error</h2>
					<p class="error-subtitle">Unable to connect to the internet</p>
				</div>

				<div class="error-body">
					<div class="error-illustration">
						<div class="cloud-container">
							<div class="cloud cloud-1">☁️</div>
							<div class="cloud cloud-2">☁️</div>
							<div class="cloud cloud-3">⛅</div>
						</div>
						<div class="signal-waves">
							<div class="wave-line wave-1"></div>
							<div class="wave-line wave-2"></div>
							<div class="wave-line wave-3"></div>
						</div>
					</div>

					<div class="error-message">
						<div class="message-icon">🌐</div>
						<h3>No Internet Connection</h3>
						<p>Please check your internet connection and try again. Make sure you're connected to Wi-Fi or mobile data.</p>
					</div>

					<div class="troubleshooting-tips">
						<h4>Quick troubleshooting tips:</h4>
						<ul class="tips-list">
							<li>
								<span class="tip-icon">📱</span>
								<span>Check if mobile data or Wi-Fi is enabled</span>
							</li>
							<li>
								<span class="tip-icon">🔄</span>
								<span>Try turning airplane mode on and off</span>
							</li>
							<li>
								<span class="tip-icon">📍</span>
								<span>Move to an area with better signal</span>
							</li>
							<li>
								<span class="tip-icon">⚡</span>
								<span>Restart your device if the problem persists</span>
							</li>
						</ul>
					</div>
				</div>

				<div class="error-footer">
					<button @onclick="RetryConnection" class="retry-button">
						<span class="retry-icon">🔄</span>
						Try Again
					</button>
				</div>
			</div>

			<!-- Background Animation -->
			<div class="error-background">
				<div class="floating-particles">
					<div class="particle particle-1"></div>
					<div class="particle particle-2"></div>
					<div class="particle particle-3"></div>
					<div class="particle particle-4"></div>
					<div class="particle particle-5"></div>
				</div>
			</div>
		</div>
	}
	else if (_isUpdating || _isLoadingText.Contains("Updating application"))
	{
		<!-- Beautiful Update UI -->
		<div class="update-container">
			<div class="update-card">
				<div class="update-header">
					<div class="update-icon-container">
						<div class="update-icon">
							<span class="download-arrow">⬇</span>
						</div>
					</div>
					<h2 class="update-title">Updating Prime Bakes</h2>
					<p class="update-subtitle">Please wait while we download the latest version</p>
				</div>

				<div class="update-body">
					<!-- Progress Ring -->
					<div class="progress-ring-container">
						<svg class="progress-ring" width="140" height="140">
							<defs>
								<linearGradient id="progressGradient" x1="0%" y1="0%" x2="100%" y2="0%">
									<stop offset="0%" style="stop-color:#e2137b;stop-opacity:1" />
									<stop offset="100%" style="stop-color:#c10e69;stop-opacity:1" />
								</linearGradient>
							</defs>
							<circle class="progress-ring__circle-bg" cx="70" cy="70" r="60" />
							<circle class="progress-ring__circle" cx="70" cy="70" r="60"
									style="stroke-dasharray: @GetCircumference(); stroke-dashoffset: @GetStrokeOffset();" />
						</svg>
						<div class="progress-content">
							<span class="progress-percentage">@_progressPercentage%</span>
							<span class="progress-label">Downloaded</span>
						</div>
					</div>

					<!-- Progress Bar -->
					<div class="progress-bar-container">
						<div class="progress-bar">
							<div class="progress-fill" style="width: @(_progressPercentage)%"></div>
							<div class="progress-glow" style="left: @(_progressPercentage)%"></div>
						</div>
						<div class="progress-text">
							<span>@_isLoadingText</span>
							<span class="eta">@_estimatedTime</span>
						</div>
					</div>

					<!-- Fun Facts -->
					<div class="fun-facts">
						<div class="fact-container">
							<div class="fact-icon">💡</div>
							<p class="fun-fact">@_currentFunFact</p>
						</div>
					</div>

					<!-- Animated Elements -->
					<div class="update-animation">
						<div class="floating-dots">
							<span class="floating-dot" style="animation-delay: 0s;"></span>
							<span class="floating-dot" style="animation-delay: 0.5s;"></span>
							<span class="floating-dot" style="animation-delay: 1s;"></span>
							<span class="floating-dot" style="animation-delay: 1.5s;"></span>
						</div>
					</div>
				</div>

				<div class="update-footer">
					<div class="update-steps">
						<div class="step @(_progressPercentage >= 10 ? "completed" : "active")">
							<div class="step-icon">📦</div>
							<span>Downloading</span>
						</div>
						<div class="step @(_progressPercentage >= 100 ? "completed" : _progressPercentage >= 10 ? "active" : "")">
							<div class="step-icon">⚙️</div>
							<span>Installing</span>
						</div>
						<div class="step @(_progressPercentage >= 100 ? "active" : "")">
							<div class="step-icon">🚀</div>
							<span>Launch</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Background Animation -->
			<div class="update-background-animation">
				<div class="wave wave1"></div>
				<div class="wave wave2"></div>
				<div class="wave wave3"></div>
			</div>
		</div>
	}
	else
	{
		<!-- Regular Loading UI -->
		<div class="loader-container">
			<div class="circular-dots-loader">
				<span class="dot dot-1"></span>
				<span class="dot dot-2"></span>
				<span class="dot dot-3"></span>
			</div>
			<p class="loading-text">@_isLoadingText</p>
		</div>
	}
}
else
{
	<!-- Dashboard Content -->
	<div class="dashboard-container">
		<div class="dashboard-header">
			<div class="logo-section">
				<img src="images/logo.png" alt="Prime Bakes Logo" class="dashboard-logo" />
				<h1 class="dashboard-title">Prime Bakes</h1>
			</div>
			<div class="user-info">
				<span class="user-name">Welcome, @(_user?.Name ?? "User")!</span>
				<button @onclick="Logout" class="logout-button">
					<span class="logout-icon">⟲</span> Logout
				</button>
			</div>
		</div>

		<div class="welcome-section">
			<h2>Dashboard</h2>
			<p>Select an option below to continue with your bakery management</p>
		</div>

		<div class="dashboard-cards">
			@if (_user.Order)
			{
				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Order")'>
					<div class="card-icon order-icon">📋</div>
					<h3>Orders</h3>
					<p>Manage customer orders and track order fulfillment</p>
				</div>
			}

			@if (_user.Sales)
			{
				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Sale")'>
					<div class="card-icon sales-icon">📈</div>
					<h3>Sales</h3>
					<p>Track sales performance and revenue analytics</p>
				</div>
			}

			@if (_user.Inventory)
			{
				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Inventory-Dashboard")'>
					<div class="card-icon inventory-icon">📦</div>
					<h3>Inventory</h3>
					<p>Manage stock levels and inventory control</p>
				</div>
			}

			@if (_user.Accounts)
			{
				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Accounting")'>
					<div class="card-icon accounts-icon">💰</div>
					<h3>Accounts</h3>
					<p>Manage financial accounts and accounting operations</p>
				</div>
			}

			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports-Dashboard")'>
				<div class="card-icon reports-icon">📊</div>
				<h3>Reports</h3>
				<p>View and generate comprehensive business reports</p>
			</div>

			@if (_user.Admin)
			{
				<div class="dashboard-card admin-card" @onclick='() => NavigationManager.NavigateTo("/Admin-Dashboard")'>
					<div class="card-icon admin-icon">👑</div>
					<h3>Admin Panel</h3>
					<p>Access advanced management tools and system administration</p>
				</div>
			}
		</div>

		<!-- Device Information Card -->
		<div class="device-info-card">
			<div class="device-info-header">
				<div class="device-icon">@DeviceType</div>
				<h3>Device Information</h3>
			</div>
			<div class="device-info-grid">
				<div class="info-item">
					<span class="info-label">Platform</span>
					<span class="info-value">@Platform</span>
				</div>
				<div class="info-item">
					<span class="info-label">Form Factor</span>
					<span class="info-value">@Factor</span>
				</div>
				<div class="info-item">
					<span class="info-label">App Version</span>
					<span class="info-value">@AppVersion</span>
				</div>
			</div>
		</div>

		<div class="dashboard-footer">
			<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
		</div>
	</div>
}

<style>
	:root {
		--primary-color: #e2137b;
		--primary-dark: #c10e69;
		--primary-light: #ff4d9f;
		--secondary-color: #2c3e50;
		--accent-color: #ffb3d1;
		--light-bg: #fff5f9;
		--dark-text: #2c3e50;
		--success-color: #28a745;
		--warning-color: #ffc107;
		--danger-color: #dc3545;
		--info-color: #17a2b8;
		--gradient-error: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
		--gradient-device: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
	}

	/* General Layout */
	body {
		margin: 0;
		padding: 0;
		background-color: var(--light-bg);
		color: var(--dark-text);
		overflow-x: hidden;
	}

	.dashboard-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		padding: 20px;
		background: linear-gradient(135deg, rgba(226, 19, 123, 0.05) 0%, rgba(193, 14, 105, 0.05) 100%);
	}

	/* Header Styles */
	.dashboard-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 15px 25px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		margin-bottom: 30px;
		border-left: 5px solid var(--primary-color);
	}

	.logo-section {
		display: flex;
		align-items: center;
	}

	.dashboard-logo {
		width: 55px;
		height: 55px;
		border-radius: 50%;
		margin-right: 15px;
		border: 3px solid var(--accent-color);
	}

	.dashboard-title {
		color: var(--primary-color);
		font-size: 28px;
		font-weight: 700;
		margin: 0;
		text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
	}

	.user-info {
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.user-name {
		font-weight: 600;
		color: var(--primary-dark);
		font-size: 16px;
	}

	.logout-button {
		background-color: transparent;
		border: 2px solid var(--primary-color);
		color: var(--primary-color);
		padding: 10px 18px;
		border-radius: 10px;
		cursor: pointer;
		font-weight: 600;
		display: flex;
		align-items: center;
		gap: 8px;
		transition: all 0.3s ease;
		font-size: 14px;
	}

		.logout-button:hover {
			background-color: var(--primary-color);
			color: white;
			transform: translateY(-1px);
		}

	.logout-icon {
		font-size: 16px;
	}

	/* Welcome Section */
	.welcome-section {
		text-align: center;
		margin-bottom: 40px;
		padding: 20px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
	}

		.welcome-section h2 {
			color: var(--primary-color);
			margin-bottom: 10px;
			font-size: 24px;
			font-weight: 600;
		}

		.welcome-section p {
			color: var(--dark-text);
			opacity: 0.8;
			font-size: 16px;
			margin: 0;
		}

	/* Dashboard cards */
	.dashboard-cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 25px;
		margin-bottom: 40px;
	}

	.dashboard-card {
		background-color: white;
		border-radius: 18px;
		padding: 30px;
		text-align: center;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		cursor: pointer;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 220px;
		border-left: 5px solid var(--accent-color);
		position: relative;
		overflow: hidden;
	}

		.dashboard-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 3px;
			background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
			transform: translateX(-100%);
			transition: transform 0.3s ease;
		}

		.dashboard-card:hover::before {
			transform: translateX(0);
		}

		.dashboard-card:hover {
			transform: translateY(-8px);
			box-shadow: 0 15px 35px rgba(226, 19, 123, 0.3);
		}

	.card-icon {
		font-size: 45px;
		margin-bottom: 20px;
		width: 90px;
		height: 90px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		margin: 0 auto 20px auto;
	}

	/* Custom icons with red theme */
	.order-icon {
		background-color: rgba(226, 19, 123, 0.1);
		color: var(--primary-color);
	}

	.sales-icon {
		background-color: rgba(193, 14, 105, 0.1);
		color: var(--primary-dark);
	}

	.sale-return-icon {
		background-color: rgba(220, 53, 69, 0.1);
		color: #dc3545;
	}

	.inventory-icon {
		background-color: rgba(255, 77, 159, 0.1);
		color: var(--primary-light);
	}

	.accounts-icon {
		background-color: rgba(40, 167, 69, 0.1);
		color: var(--success-color);
	}

	.reports-icon {
		background-color: rgba(23, 162, 184, 0.1);
		color: var(--info-color);
	}

	.admin-icon {
		background-color: rgba(255, 193, 7, 0.1);
		color: #ff9800;
	}

	.admin-card {
		background: linear-gradient(135deg, rgba(255, 193, 7, 0.05) 0%, rgba(255, 152, 0, 0.05) 100%);
		border-left: 5px solid #ff9800;
	}

		.admin-card:hover {
			background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 152, 0, 0.1) 100%);
			box-shadow: 0 15px 35px rgba(255, 152, 0, 0.3);
		}

	.dashboard-card h3 {
		color: var(--dark-text);
		margin-bottom: 15px;
		font-size: 20px;
		font-weight: 600;
	}

	.dashboard-card p {
		color: #666;
		font-size: 14px;
		margin: 0;
		line-height: 1.4;
	}

	/* Device Information Card */
	.device-info-card {
		background-color: white;
		border-radius: 15px;
		padding: 25px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
		margin-bottom: 20px;
		position: relative;
		overflow: hidden;
		border-left: 5px solid var(--info-color);
	}

		.device-info-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 4px;
			background: var(--gradient-device);
		}

	.device-info-header {
		display: flex;
		align-items: center;
		gap: 12px;
		margin-bottom: 20px;
	}

	.device-icon {
		width: 40px;
		height: 40px;
		background: var(--gradient-device);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 20px;
		color: white;
		flex-shrink: 0;
	}

	.device-info-header h3 {
		color: var(--dark-text);
		font-size: 20px;
		font-weight: 700;
		margin: 0;
		letter-spacing: -0.3px;
	}

	.device-info-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 15px;
	}

	.info-item {
		display: flex;
		flex-direction: column;
		gap: 4px;
		padding: 15px;
		background: linear-gradient(135deg, rgba(79, 172, 254, 0.05) 0%, rgba(0, 242, 254, 0.05) 100%);
		border-radius: 10px;
		border-left: 3px solid var(--accent-color);
	}

	.info-label {
		font-size: 12px;
		color: #666;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.info-value {
		font-size: 16px;
		color: var(--dark-text);
		font-weight: 600;
	}

	/* Footer */
	.dashboard-footer {
		margin-top: auto;
		text-align: center;
		padding: 25px;
		color: var(--primary-dark);
		font-size: 14px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
	}

	.footer-link {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

		.footer-link:hover {
			color: var(--primary-dark);
			text-decoration: underline;
		}

	/* Loading Animation */
	.loader-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
		background-color: var(--light-bg);
	}

	.circular-dots-loader {
		position: relative;
		width: 70px;
		height: 70px;
		margin-bottom: 20px;
	}

		.circular-dots-loader .dot {
			position: absolute;
			width: 14px;
			height: 14px;
			border-radius: 50%;
			animation: rotate 1.8s infinite linear;
		}

		.circular-dots-loader .dot-1 {
			background-color: var(--primary-color);
			animation-delay: 0s;
		}

		.circular-dots-loader .dot-2 {
			background-color: var(--primary-dark);
			animation-delay: -0.6s;
		}

		.circular-dots-loader .dot-3 {
			background-color: var(--accent-color);
			animation-delay: -1.2s;
		}

	.loading-text {
		color: var(--dark-text);
		font-size: 16px;
		margin-top: 10px;
		font-weight: 500;
	}

	/* Error UI Styles - Compact version */
	.error-container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		z-index: 1000;
	}

	.error-card {
		background: white;
		border-radius: 24px;
		padding: 40px;
		max-width: 500px;
		width: 90%;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
		position: relative;
		z-index: 1001;
		animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		text-align: center;
	}

	.error-header {
		margin-bottom: 30px;
	}

	.error-icon-container {
		display: flex;
		justify-content: center;
		margin-bottom: 20px;
		position: relative;
	}

	.error-icon {
		width: 80px;
		height: 80px;
		background: var(--gradient-error);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 32px;
		color: white;
		animation: errorPulse 2s infinite;
		position: relative;
	}

	.error-title {
		font-size: 28px;
		font-weight: 700;
		color: var(--dark-text);
		margin-bottom: 8px;
		letter-spacing: -0.5px;
	}

	.error-subtitle {
		color: #666;
		font-size: 16px;
		margin: 0;
	}

	.error-body {
		margin-bottom: 30px;
	}

	.error-message {
		background: linear-gradient(135deg, rgba(231, 76, 60, 0.05) 0%, rgba(192, 57, 43, 0.05) 100%);
		border-radius: 12px;
		padding: 20px;
		margin-bottom: 25px;
		border-left: 4px solid #e74c3c;
	}

	.message-icon {
		font-size: 24px;
		margin-bottom: 10px;
