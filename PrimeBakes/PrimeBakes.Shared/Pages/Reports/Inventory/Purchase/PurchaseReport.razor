@page "/report/purchase"

@using PrimeBakesLibrary.Models.Common
@using PrimeBakesLibrary.Models.Accounts.Masters
@using PrimeBakesLibrary.Models.Inventory
@using PrimeBakesLibrary.Models.Inventory.Purchase

<PageTitle>Purchase Report - Prime Bakes</PageTitle>

@if (_isLoading)
{
	<SfSpinner @bind-Visible="_isLoading" Label="Page is Loading, Please Wait" />
}
else
{
	<!-- Professional Header Section -->
	<div class="page-header">
		<div class="header-left">
			<img src="images/logo.png" alt="Prime Bakes" class="header-logo" />
			<div class="header-divider"></div>
			<div class="header-text">
				<span class="app-name">Prime Bakes</span>
			</div>
		</div>
		<div class="header-center">
			<h1 class="page-title">Purchase Report</h1>
			<p class="page-subtitle">View and analyze purchase transactions</p>
		</div>
		<div class="header-right">
			<button class="btn-icon btn-icon-excel" @onclick="ExportExcel" disabled="@_isProcessing"
				title="Export to Excel">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
					<polyline points="14 2 14 8 20 8" />
					<line x1="16" y1="13" x2="8" y2="13" />
					<line x1="16" y1="17" x2="8" y2="17" />
					<polyline points="10 9 9 9 8 9" />
				</svg>
			</button>
			<button class="btn-icon btn-icon-pdf" @onclick="ExportPdf" disabled="@_isProcessing" title="Export to PDF">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
					<polyline points="14 2 14 8 20 8" />
					<line x1="16" y1="13" x2="8" y2="13" />
					<line x1="16" y1="17" x2="8" y2="17" />
					<line x1="10" y1="9" x2="8" y2="9" />
				</svg>
			</button>
			<button class="btn-icon" title="Refresh Data" @onclick="LoadPurchaseOverviews" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<polyline points="23 4 23 10 17 10" />
					<polyline points="1 20 1 14 7 14" />
					<path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15" />
				</svg>
			</button>
			<button class="btn-icon" @onclick="NavigateToItemReport" title="Item Report" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
					<path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
				</svg>
			</button>
			<button class="btn-icon" @onclick="NavigateToPurchasePage" title="Create Purchase" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<line x1="12" y1="5" x2="12" y2="19" />
					<line x1="5" y1="12" x2="19" y2="12" />
				</svg>
			</button>
			<button class="btn-icon" @onclick='() => NavigationManager.NavigateTo(PageRouteNames.Dashboard)' title="Home"
				disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
					<polyline points="9 22 9 12 15 12 15 22" />
				</svg>
			</button>
			<button class="btn-icon" @onclick='() => NavigationManager.NavigateTo(PageRouteNames.ReportDashboard)' title="Back"
				disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
					stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M19 12H5M12 19l-7-7 7-7" />
				</svg>
			</button>
		</div>
	</div>

	<!-- Main Content Container -->
	<div class="report-container">

		<!-- Filters Section -->
		<div class="section-card">
			<div class="section-header">
				<div class="section-title-wrapper">
					<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
						fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
					</svg>
					<h2 class="section-title">Filters</h2>
				</div>
			</div>
			<div class="section-body">
				<div class="filters-container">
					<div class="filters-grid">
						<!-- Date Range -->
						<div class="form-field">
							<label class="field-label">Date Range</label>
							<SfDateRangePicker CssClass="custom-daterange" StartDate="_fromDate" EndDate="_toDate"
								TValue="DateTime" Format="dd/MM/yyyy" AllowEdit="true" Placeholder="Select date range">
								<DateRangePickerEvents TValue="DateTime" ValueChange="OnDateRangeChanged" />
							</SfDateRangePicker>
						</div>

						<!-- Company -->
						<div class="form-field">
							<label class="field-label">Company</label>
							<SfAutoComplete CssClass="custom-autocomplete" Value="@_selectedCompany" TValue="CompanyModel"
								TItem="CompanyModel" DataSource="@_companies" Placeholder="All Companies"
								AllowFiltering="true" FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
								<AutoCompleteEvents TItem="CompanyModel" TValue="CompanyModel"
									ValueChange="OnCompanyChanged" />
								<AutoCompleteFieldSettings Value="Name" />
							</SfAutoComplete>
						</div>

						<!-- Party -->
						<div class="form-field">
							<label class="field-label">Party</label>
							<SfAutoComplete CssClass="custom-autocomplete" Value="@_selectedParty" TValue="LedgerModel"
								TItem="LedgerModel" DataSource="@_parties" Placeholder="All Parties" AllowFiltering="true"
								FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
								<AutoCompleteEvents TItem="LedgerModel" TValue="LedgerModel" ValueChange="OnPartyChanged" />
								<AutoCompleteFieldSettings Value="Name" />
							</SfAutoComplete>
						</div>
					</div>

					<!-- Date Utility Buttons -->
					<div class="date-utilities">
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.Today)" title="Today"
							disabled="@_isProcessing">
							<span>Today</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.Yesterday)"
							title="Yesterday" disabled="@_isProcessing">
							<span>Yesterday</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.CurrentMonth)"
							title="Current Month" disabled="@_isProcessing">
							<span>Current Month</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.PreviousMonth)"
							title="Previous Month" disabled="@_isProcessing">
							<span>Previous Month</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.CurrentFinancialYear)"
							title="Current Financial Year" disabled="@_isProcessing">
							<span>Current FY</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.PreviousFinancialYear)"
							title="Previous Financial Year" disabled="@_isProcessing">
							<span>Previous FY</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.AllTime)"
							title="All Time" disabled="@_isProcessing">
							<span>All Time</span>
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Report Grid Section -->
		<div class="section-card">
			<div class="section-header">
				<div class="section-title-wrapper">
					<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
						fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<line x1="8" y1="6" x2="21" y2="6" />
						<line x1="8" y1="12" x2="21" y2="12" />
						<line x1="8" y1="18" x2="21" y2="18" />
						<line x1="3" y1="6" x2="3.01" y2="6" />
						<line x1="3" y1="12" x2="3.01" y2="12" />
						<line x1="3" y1="18" x2="3.01" y2="18" />
					</svg>
					<h2 class="section-title">Purchase Transactions</h2>
				</div>
				<div class="header-actions">
					<button class="btn-toggle-deleted @(_showDeleted ? "active" : "")" @onclick="ToggleDeleted"
						title="@(_showDeleted ? "Hide Deleted Items" : "Show Deleted Items")" disabled="@_isProcessing">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
							stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<polyline points="3 6 5 6 21 6" />
							<path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
							<line x1="10" y1="11" x2="10" y2="17" />
							<line x1="14" y1="11" x2="14" y2="17" />
						</svg>
						@(_showDeleted ? "Hide Deleted" : "Show Deleted")
					</button>
					<button class="btn-toggle-returns @(_showPurchaseReturns ? "active" : "")"
						@onclick="TogglePurchaseReturns"
						title="@(_showPurchaseReturns ? "Hide Purchase Returns" : "Show Purchase Returns")"
						disabled="@_isProcessing">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
							stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<polyline points="9 14 4 9 9 4" />
							<path d="M20 20v-7a4 4 0 0 0-4-4H4" />
						</svg>
						@(_showPurchaseReturns ? "Hide Returns" : "Show Returns")
					</button>
					<button class="btn-toggle-details" @onclick="ToggleDetailsView"
						title="@(_showAllColumns ? "Show Less" : "Show All Details")" disabled="@_isProcessing">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
							stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							@if (_showAllColumns)
							{
								<circle cx="12" cy="12" r="1" />
								<circle cx="19" cy="12" r="1" />
								<circle cx="5" cy="12" r="1" />
							}
							else
							{
								<rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
								<line x1="9" y1="9" x2="15" y2="9" />
								<line x1="9" y1="15" x2="15" y2="15" />
							}
						</svg>
						@(_showAllColumns ? "Show Less" : "Details")
					</button>
				</div>
			</div>
			<div class="section-body grid-body">
				<SfGrid ID="_sfPurchaseGrid" @ref="_sfPurchaseGrid" TValue="PurchaseOverviewModel"
					DataSource="_purchaseOverviews" AllowTextWrap="true" AllowPaging="true" AllowSorting="true"
					AllowResizing="true" AllowFiltering="true" AllowExcelExport="true" AllowPdfExport="true"
					GridLines="GridLine.Horizontal" CssClass="professional-grid"
					Toolbar="@(new List<string>() { "Search" })">

					<GridPageSettings PageSize="20" PageSizes="new int[] { 10, 20, 50, 100 }" />
					<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

					<GridAggregates>
						<GridAggregate>
							<GridAggregateColumns>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TransactionNo)"
									Type="AggregateType.Count">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
										}
										<div class="aggregate-label">
											<strong>Total Items: @aggregate.Count</strong>
										</div>
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalItems)"
									Type="AggregateType.Sum" Format="N0">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalQuantity)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.BaseTotal)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.DiscountAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div class="aggregate-value aggregate-discount"><strong>@aggregate.Sum</strong>
											</div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.AfterDiscount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.SGSTAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.CGSTAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.IGSTAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalTaxAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalAfterTax)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.OtherChargesAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalAfterOtherCharges)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.CashDiscountAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div class="aggregate-value aggregate-discount"><strong>@aggregate.Sum</strong>
											</div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalAfterCashDiscount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.RoundOffAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(PurchaseOverviewModel.TotalAmount)"
									Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
							</GridAggregateColumns>
						</GridAggregate>
					</GridAggregates>

					<GridColumns>
						<GridColumn HeaderText="Actions" Width="200" TextAlign="TextAlign.Center">
							<Template>
								@{
									var purchase = (context as PurchaseOverviewModel);
								}
								<div class="grid-actions">
									@if (purchase.Status == false)
									{
										<button class="btn-grid-action btn-invoice"
											@onclick="() => DownloadInvoice(purchase.Id)" title="Download Invoice"
											disabled="@_isProcessing">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
												fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
												stroke-linejoin="round">
												<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
												<polyline points="7 10 12 15 17 10" />
												<line x1="12" y1="15" x2="12" y2="3" />
											</svg>
										</button>
										<button class="btn-grid-action btn-recover"
											@onclick="() => ShowRecoverConfirmation(purchase.Id, purchase.TransactionNo)"
											title="Recover Purchase" disabled="@_isProcessing">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
												fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
												stroke-linejoin="round">
												<polyline points="23 4 23 10 17 10"></polyline>
												<path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
											</svg>
										</button>
									}
									else
									{
										<button class="btn-grid-action btn-view" @onclick="() => ViewPurchase(purchase.Id)"
											title="View Purchase" disabled="@_isProcessing">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
												fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
												stroke-linejoin="round">
												<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
												<circle cx="12" cy="12" r="3" />
											</svg>
										</button>
										<button class="btn-grid-action btn-invoice"
											@onclick="() => DownloadInvoice(purchase.Id)" title="Download Invoice"
											disabled="@_isProcessing">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
												fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
												stroke-linejoin="round">
												<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
												<polyline points="7 10 12 15 17 10" />
												<line x1="12" y1="15" x2="12" y2="3" />
											</svg>
										</button>
										<button class="btn-grid-action btn-original"
											@onclick="() => DownloadOriginalInvoice(purchase.DocumentUrl)"
											disabled="@(string.IsNullOrEmpty(purchase.DocumentUrl) || _isProcessing)"
											title="Download Original">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
												fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
												stroke-linejoin="round">
												<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
												<polyline points="14 2 14 8 20 8" />
												<line x1="16" y1="13" x2="8" y2="13" />
												<line x1="16" y1="17" x2="8" y2="17" />
												<polyline points="10 9 9 9 8 9" />
											</svg>
										</button>
										<button class="btn-grid-action btn-delete"
											@onclick="() => ShowDeleteConfirmation(purchase.Id, purchase.TransactionNo)"
											title="Delete Purchase" disabled="@_isProcessing">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
												fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
												stroke-linejoin="round">
												<polyline points="3 6 5 6 21 6" />
												<path
													d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
