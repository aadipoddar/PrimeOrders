@page "/report/product-stock"

@using PrimeBakesLibrary.Models.Common
@using PrimeBakesLibrary.Models.Accounts.Masters
@using PrimeBakesLibrary.Models.Inventory
@using PrimeBakesLibrary.Models.Inventory.Stock

<PageTitle>Product Stock Report - Prime Bakes</PageTitle>

@if (_isLoading)
{
    <SfSpinner @bind-Visible="_isLoading" Label="Page is Loading, Please Wait" />
}
else
{
    <PageHeader Title="Product Stock Report" Subtitle="View and analyze product stock" ShowHome="true" ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack">
        <RightContent>
            <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)" Disabled="_isProcessing" OnClick="ExportExcel" />
            <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)" Disabled="_isProcessing" OnClick="ExportPdf" />
            <IconButton Icon="IconType.Refresh" Title="Refresh Data (Ctrl + R)" Disabled="_isProcessing" OnClick="LoadStockData" />
            <IconButton Icon="IconType.New" Title="New Transaction (Ctrl + N)" Disabled="_isProcessing" OnClick="NavigateToTransactionPage" />
        </RightContent>
    </PageHeader>

    <!-- Main Content Container -->
    <div class="report-container">

        <!-- Filters Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-title-wrapper">
                    <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                         fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
                    </svg>
                    <h2 class="section-title">Filters</h2>
                </div>
            </div>
            <div class="section-body">
                <div class="filters-container">
                    <div class="filters-grid">
                        <!-- Date Range -->
                        <div class="form-field">
                            <label class="field-label">Date Range</label>
                            <SfDateRangePicker CssClass="custom-daterange" StartDate="_fromDate" EndDate="_toDate"
                                               TValue="DateTime" Format="dd/MM/yyyy" AllowEdit="true" Placeholder="Select date range">
                                <DateRangePickerEvents TValue="DateTime" ValueChange="OnDateRangeChanged" />
                            </SfDateRangePicker>
                        </div>

                        <div class="form-field">
                            <label class="field-label">Outlet</label>
                            <SfAutoComplete CssClass="custom-autocomplete" Value="@_selectedLocation" TValue="LocationModel"
                                            TItem="LocationModel" DataSource="@_locations" Placeholder="Select an Outlet"
                                            AllowFiltering="true" FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
                                <AutoCompleteEvents TItem="LocationModel" TValue="LocationModel"
                                                    ValueChange="OnLocationChanged" />
                                <AutoCompleteFieldSettings Value="Name" />
                            </SfAutoComplete>
                        </div>
                    </div>

                    <!-- Date Utility Buttons -->
                    <DateRangeButtons Disabled="_isProcessing" OnDateRangeSelected="SetDateRange" />
                </div>
            </div>
        </div>

        <!-- Report Grid Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-title-wrapper">
                    <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                         fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="8" y1="6" x2="21" y2="6" />
                        <line x1="8" y1="12" x2="21" y2="12" />
                        <line x1="8" y1="18" x2="21" y2="18" />
                        <line x1="3" y1="6" x2="3.01" y2="6" />
                        <line x1="3" y1="12" x2="3.01" y2="12" />
                        <line x1="3" y1="18" x2="3.01" y2="18" />
                    </svg>
                    <h2 class="section-title">Raw Material Stock Summary</h2>
                </div>
                <div class="header-actions">
                    <button class="btn-toggle-details" @onclick="ToggleColumnsView"
                            title="@(_showAllColumns ? "Show Less" : "Show All Columns")" disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            @if (_showAllColumns)
                            {
                                <circle cx="12" cy="12" r="1" />
                                <circle cx="19" cy="12" r="1" />
                                <circle cx="5" cy="12" r="1" />
                            }
                            else
                            {
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                <line x1="9" y1="9" x2="15" y2="9" />
                                <line x1="9" y1="15" x2="15" y2="15" />
                            }
                        </svg>
                        @(_showAllColumns ? "Show Less" : "All Columns")
                    </button>
                    <button class="btn-toggle-details" @onclick="ToggleDetailsView"
                            title="@(_showDetails ? "Hide Transaction Details" : "Show Transaction Details")"
                            disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                        @(_showDetails ? "Hide Details" : "Transaction Details")
                    </button>
                </div>
            </div>
            <div class="section-body grid-body">
                <SfGrid ID="_sfStockGrid" @ref="_sfStockGrid" TValue="ProductStockSummaryModel" DataSource="_stockSummary"
                        AllowTextWrap="true" AllowPaging="true" AllowSorting="true" AllowResizing="true" AllowFiltering="true"
                        AllowExcelExport="true" AllowPdfExport="true" GridLines="GridLine.Horizontal" AllowGrouping="true"
                        CssClass="professional-grid" Toolbar="@(new List<string>() { "Search" })">

                    <GridGroupSettings ShowDropArea="true" ShowGroupedColumn="true" ShowUngroupButton="true" />
                    <GridPageSettings PageSize="20" PageSizes="@(new string[] { "10", "20", "50", "100", "All" })" />
                    <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

                    <GridAggregates>
                        <GridAggregate>
                            <GridAggregateColumns>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.ProductName)"
                                                     Type="AggregateType.Count">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                        }
                                        <div class="aggregate-label">
                                            <strong>Total Items: @aggregate.Count</strong>
                                        </div>
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                        }
                                        <div class="aggregate-label">
                                            <strong>Total Items: @aggregate.Count</strong>
                                        </div>
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                        }
                                        <div class="aggregate-label">
                                            <strong>Total Items: @aggregate.Count</strong>
                                        </div>
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.OpeningStock)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.PurchaseStock)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.SaleStock)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.MonthlyStock)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.ClosingStock)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.ClosingValue)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.WeightedAverageValue)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(ProductStockSummaryModel.LastSaleValue)"
                                                     Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                    <GroupFooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupFooterTemplate>
                                    <GroupCaptionTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </GroupCaptionTemplate>
                                </GridAggregateColumn>
                            </GridAggregateColumns>
                        </GridAggregate>
                    </GridAggregates>

                    <GridColumns>
                        <GridColumn Field="@nameof(ProductStockSummaryModel.ProductCode)" HeaderText="Code" Width="120" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.ProductName)" HeaderText="Product" Width="250" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.ProductCategoryName)" HeaderText="Category" Width="180" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.OpeningStock)" HeaderText="Opening Stock" Width="150" Format="N2" TextAlign="TextAlign.Right" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.PurchaseStock)" HeaderText="Purchase" Width="130" Format="N2" TextAlign="TextAlign.Right" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.SaleStock)" HeaderText="Sale" Width="130" Format="N2" TextAlign="TextAlign.Right" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.MonthlyStock)" HeaderText="Monthly Stock" Width="150" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.ClosingStock)" HeaderText="Closing Stock" Width="150" Format="N2" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    var item = (context as ProductStockSummaryModel);
                                    <span class="@(item.ClosingStock < 0 ? "stock-negative" : "")">@item.ClosingStock.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(ProductStockSummaryModel.Rate)" HeaderText="Rate" Width="120" Format="N2" TextAlign="TextAlign.Right" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.ClosingValue)" HeaderText="Closing Value" Width="150" Format="N2" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    var item = (context as ProductStockSummaryModel);
                                    <span class="grid-total">@item.ClosingValue.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>

                        <GridColumn Field="@nameof(ProductStockSummaryModel.AveragePrice)" HeaderText="Avg Price" Width="130" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.WeightedAverageValue)" HeaderText="Weighted Avg Value" Width="180" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.LastSalePrice)" HeaderText="Last Sale Price" Width="170" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(ProductStockSummaryModel.LastSaleValue)" HeaderText="Last Sale Value" Width="180" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                    </GridColumns>
                </SfGrid>
            </div>
        </div>

        <!-- Stock Details Grid Section (Visible when _showDetails is true) -->
        @if (_showDetails)
        {
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                        <h2 class="section-title">Stock Details (Transaction Level)</h2>
                    </div>
                </div>
                <div class="section-body grid-body">
                    <SfGrid ID="_sfStockDetailsGrid" @ref="_sfStockDetailsGrid" TValue="ProductStockDetailsModel"
                            DataSource="_stockDetails" AllowTextWrap="true" AllowPaging="true" AllowSorting="true"
                            AllowResizing="true" AllowFiltering="true" AllowExcelExport="true" AllowPdfExport="true"
                            GridLines="GridLine.Horizontal" CssClass="professional-grid" AllowGrouping="true"
                            Toolbar="@(new List<string>() { "Search" })">

                        <GridGroupSettings ShowDropArea="true" ShowGroupedColumn="true" ShowUngroupButton="true" />
                        <GridPageSettings PageSize="20" PageSizes="@(new string[] { "10", "20", "50", "100", "All" })" />
                        <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

                        <GridAggregates>
                            <GridAggregate>
                                <GridAggregateColumns>
                                    <GridAggregateColumn Field="@nameof(ProductStockDetailsModel.ProductName)"
                                                         Type="AggregateType.Count">
                                        <FooterTemplate>
                                            @{
                                                var aggregate = (context as AggregateTemplateContext);
                                            }
                                            <div class="aggregate-label">
                                                <strong>Total Transactions: @aggregate.Count</strong>
                                            </div>
                                        </FooterTemplate>
                                        <GroupFooterTemplate>
                                            @{
                                                var aggregate = (context as AggregateTemplateContext);
                                            }
                                            <div class="aggregate-label">
                                                <strong>Total Transactions: @aggregate.Count</strong>
                                            </div>
                                        </GroupFooterTemplate>
                                        <GroupCaptionTemplate>
                                            @{
                                                var aggregate = (context as AggregateTemplateContext);
                                            }
                                            <div class="aggregate-label">
                                                <strong>Total Transactions: @aggregate.Count</strong>
                                            </div>
                                        </GroupCaptionTemplate>
                                    </GridAggregateColumn>
                                    <GridAggregateColumn Field="@nameof(ProductStockDetailsModel.Quantity)"
                                                         Type="AggregateType.Sum" Format="N2">
                                        <FooterTemplate>
                                            @{
                                                var aggregate = (context as AggregateTemplateContext);
                                                <div><strong>@aggregate.Sum</strong></div>
                                            }
                                        </FooterTemplate>
                                        <GroupFooterTemplate>
                                            @{
                                                var aggregate = (context as AggregateTemplateContext);
                                                <div><strong>@aggregate.Sum</strong></div>
                                            }
                                        </GroupFooterTemplate>
                                        <GroupCaptionTemplate>
                                            @{
                                                var aggregate = (context as AggregateTemplateContext);
                                                <div><strong>@aggregate.Sum</strong></div>
                                            }
                                        </GroupCaptionTemplate>
                                    </GridAggregateColumn>
                                </GridAggregateColumns>
                            </GridAggregate>
                        </GridAggregates>

                        <GridColumns>
                            <GridColumn HeaderText="Actions" Width="150" TextAlign="TextAlign.Center">
                                <Template>
                                    @{
                                        var item = (context as ProductStockDetailsModel);
                                    }
                                    <div class="grid-actions">
                                        @if (item.TransactionId is null && item.Type?.ToLower() == "adjustment")
                                        {
                                            <IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete" Size="ButtonSize.Grid" Title="Delete Transaction (Delete)" Disabled="_isProcessing" OnClick="@(() => ShowDeleteConfirmation(item.Id, item.TransactionNo))" />
                                        }
                                        @if (item.TransactionId is not null && item.Type?.ToLower() != "adjustment")
                                        {
                                            <IconButton Icon="IconType.View" Variant="ButtonVariant.View" Size="ButtonSize.Grid" Title="View Transaction (Ctrl + O)" Disabled="_isProcessing" OnClick="@(() => ViewTransaction(item.Type, item.TransactionId.Value))" />
                                            <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Size="ButtonSize.Grid" Title="Download Excel Invoice (Alt+E)" Disabled="_isProcessing" OnClick="@(() => DownloadExcelInvoice(item.Type, item.TransactionId.Value))" />
                                            <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Size="ButtonSize.Grid" Title="Download PDF Invoice (Alt+P)" Disabled="_isProcessing" OnClick="@(() => DownloadPdfInvoice(item.Type, item.TransactionId.Value))" />
                                        }
                                    </div>
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(ProductStockDetailsModel.TransactionDateTime)" HeaderText="Date" Width="130" Format="dd/MM/yyyy" Type="ColumnType.Date" />
                            <GridColumn Field="@nameof(ProductStockDetailsModel.TransactionNo)" HeaderText="Trans No" Width="180" />
                            <GridColumn Field="@nameof(ProductStockDetailsModel.Type)" HeaderText="Type" Width="150">
                                <Template>
                                    @{
                                        var item = (context as ProductStockDetailsModel);
                                        <span class="transaction-type transaction-type-@item.Type.ToLower().Replace(" ", "-")">
                                            @item.Type
                                        </span>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(ProductStockDetailsModel.ProductCode)" HeaderText="Code" Width="120" />
                            <GridColumn Field="@nameof(ProductStockDetailsModel.ProductName)" HeaderText="Product" Width="250" />
                            <GridColumn Field="@nameof(ProductStockDetailsModel.Quantity)" HeaderText="Qty" Width="130" Format="N2" TextAlign="TextAlign.Right">
                                <Template>
                                    @{
                                        var item = (context as ProductStockDetailsModel);
                                        <span class="@(item.Quantity < 0 ? "stock-negative" : "stock-positive")">
                                            @item.Quantity.ToString("N2")
                                        </span>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(ProductStockDetailsModel.NetRate)" HeaderText="Rate" Width="120" Format="N2" TextAlign="TextAlign.Right" />
                        </GridColumns>
                    </SfGrid>
                </div>
            </div>
        }
    </div>
}

<ToastNotification @ref="_toastNotification" />

<SfDialog @ref="_deleteConfirmationDialog" Width="500px" IsModal="true" ShowCloseIcon="true"
          @bind-Visible="_isDeleteDialogVisible">
    <DialogTemplates>
        <Header>
            <div style="display: flex; align-items: center; gap: 12px; padding: 4px 0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     style="color: #ef4444;">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="12" y1="8" x2="12" y2="12" />
                    <line x1="12" y1="16" x2="12.01" y2="16" />
                </svg>
                <span style="font-size: 18px; font-weight: 600; color: #0f172a;">Confirm Delete Adjustment</span>
            </div>
        </Header>
        <Content>
            <div style="padding: 24px;">
                <p style="margin: 0 0 16px 0; font-size: 15px; color: #334155; line-height: 1.6;">
                    Are you sure you want to delete this stock adjustment?
                </p>
                <div style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 16px; margin-bottom: 20px;">
                    <p style="margin: 0 0 8px 0; font-size: 14px; color: #991b1b; font-weight: 600;">
                        Adjustment Details:
                    </p>
                    <p style="margin: 0; font-size: 13px; color: #7f1d1d; line-height: 1.5;">
                        <strong>Transaction No:</strong> @_deleteTransactionNo
                    </p>
                </div>
                <div style="background: #fffbeb; border-left: 4px solid #f59e0b; border-radius: 6px; padding: 12px; margin-bottom: 20px;">
                    <p style="margin: 0; font-size: 13px; color: #92400e; line-height: 1.6;">
                        <strong>Warning:</strong> This action cannot be undone. The stock adjustment will be permanently
                        deleted and stock quantities will be recalculated.
                    </p>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
