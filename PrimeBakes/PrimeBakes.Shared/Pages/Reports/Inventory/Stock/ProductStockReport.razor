@page "/report/product-stock"

@using PrimeBakesLibrary.Models.Common
@using PrimeBakesLibrary.Models.Accounts.Masters
@using PrimeBakesLibrary.Models.Inventory
@using PrimeBakesLibrary.Models.Inventory.Stock

<PageTitle>Product Stock Report - Prime Bakes</PageTitle>

@if (_isLoading)
{
	<SfSpinner @bind-Visible="_isLoading" Label="Page is Loading, Please Wait" />
}
else
{
	<!-- Professional Header Section -->
	<div class="page-header">
		<div class="header-left">
			<img src="images/logo.png" alt="Prime Bakes" class="header-logo" />
			<div class="header-divider"></div>
			<div class="header-text">
				<span class="app-name">Prime Bakes</span>
			</div>
		</div>
		<div class="header-center">
			<h1 class="page-title">Product Stock Report</h1>
			<p class="page-subtitle">View and analyze product stock</p>
		</div>
		<div class="header-right">
			<button class="btn-icon btn-icon-excel" @onclick="ExportExcel" disabled="@_isProcessing" title="Export to Excel">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
					<polyline points="14 2 14 8 20 8" />
					<line x1="16" y1="13" x2="8" y2="13" />
					<line x1="16" y1="17" x2="8" y2="17" />
					<polyline points="10 9 9 9 8 9" />
				</svg>
			</button>
			<button class="btn-icon btn-icon-pdf" @onclick="ExportPdf" disabled="@_isProcessing" title="Export to PDF">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
					<polyline points="14 2 14 8 20 8" />
					<line x1="16" y1="13" x2="8" y2="13" />
					<line x1="16" y1="17" x2="8" y2="17" />
					<line x1="10" y1="9" x2="8" y2="9" />
				</svg>
			</button>
			<button class="btn-icon" @onclick="LoadStockData" title="Refresh Data" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<polyline points="23 4 23 10 17 10" />
					<polyline points="1 20 1 14 7 14" />
					<path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15" />
				</svg>
			</button>
			<button class="btn-icon" @onclick="NavigateToStockAdjustmentPage" title="Adjust Product Stock" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<line x1="12" y1="5" x2="12" y2="19" />
					<line x1="5" y1="12" x2="19" y2="12" />
				</svg>
			</button>
			<button class="btn-icon" @onclick='() => NavigationManager.NavigateTo("/")' title="Home" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
					<polyline points="9 22 9 12 15 12 15 22" />
				</svg>
			</button>
			<button class="btn-icon" @onclick='() => NavigationManager.NavigateTo("/reports")' title="Back" disabled="@_isProcessing">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M19 12H5M12 19l-7-7 7-7" />
				</svg>
			</button>
		</div>
	</div>

	<!-- Main Content Container -->
	<div class="report-container">

		<!-- Filters Section -->
		<div class="section-card">
			<div class="section-header">
				<div class="section-title-wrapper">
					<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
					</svg>
					<h2 class="section-title">Filters</h2>
				</div>
			</div>
			<div class="section-body">
				<div class="filters-container">
					<div class="filters-grid">
						<!-- Date Range -->
						<div class="form-field">
							<label class="field-label">Date Range</label>
							<SfDateRangePicker CssClass="custom-daterange"
											   StartDate="_fromDate"
											   EndDate="_toDate"
											   TValue="DateTime"
											   Format="dd/MM/yyyy"
											   AllowEdit="true"
											   Placeholder="Select date range">
								<DateRangePickerEvents TValue="DateTime" ValueChange="OnDateRangeChanged" />
							</SfDateRangePicker>
						</div>

						<div class="form-field">
							<label class="field-label">Outlet</label>
							<SfAutoComplete CssClass="custom-autocomplete"
											Value="@_selectedLocation"
											TValue="LocationModel"
											TItem="LocationModel"
											DataSource="@_locations"
											Autofill="true"
											Placeholder="Select an Outlet"
											AllowFiltering="true"
											FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
								<AutoCompleteEvents TItem="LocationModel" TValue="LocationModel" ValueChange="OnLocationChanged" />
								<AutoCompleteFieldSettings Value="Name" />
							</SfAutoComplete>
						</div>
					</div>

					<!-- Date Utility Buttons -->
					<div class="date-utilities">
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.Today)" title="Today" disabled="@_isProcessing">
							<span>Today</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.Yesterday)" title="Yesterday" disabled="@_isProcessing">
							<span>Yesterday</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.CurrentMonth)" title="Current Month" disabled="@_isProcessing">
							<span>Current Month</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.PreviousMonth)" title="Previous Month" disabled="@_isProcessing">
							<span>Previous Month</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.CurrentFinancialYear)" title="Current Financial Year" disabled="@_isProcessing">
							<span>Current FY</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.PreviousFinancialYear)" title="Previous Financial Year" disabled="@_isProcessing">
							<span>Previous FY</span>
						</button>
						<button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.AllTime)" title="All Time" disabled="@_isProcessing">
							<span>All Time</span>
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Report Grid Section -->
		<div class="section-card">
			<div class="section-header">
				<div class="section-title-wrapper">
					<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<line x1="8" y1="6" x2="21" y2="6" />
						<line x1="8" y1="12" x2="21" y2="12" />
						<line x1="8" y1="18" x2="21" y2="18" />
						<line x1="3" y1="6" x2="3.01" y2="6" />
						<line x1="3" y1="12" x2="3.01" y2="12" />
						<line x1="3" y1="18" x2="3.01" y2="18" />
					</svg>
					<h2 class="section-title">Raw Material Stock Summary</h2>
				</div>
				<div class="header-actions">
					<button class="btn-toggle-details" @onclick="ToggleColumnsView" title="@(_showAllColumns ? "Show Less" : "Show All Columns")" disabled="@_isProcessing">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							@if (_showAllColumns)
							{
								<circle cx="12" cy="12" r="1" />
								<circle cx="19" cy="12" r="1" />
								<circle cx="5" cy="12" r="1" />
							}
							else
							{
								<rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
								<line x1="9" y1="9" x2="15" y2="9" />
								<line x1="9" y1="15" x2="15" y2="15" />
							}
						</svg>
						@(_showAllColumns ? "Show Less" : "All Columns")
					</button>
					<button class="btn-toggle-details" @onclick="ToggleDetailsView" title="@(_showDetails ? "Hide Transaction Details" : "Show Transaction Details")" disabled="@_isProcessing">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
							<polyline points="14 2 14 8 20 8"></polyline>
							<line x1="16" y1="13" x2="8" y2="13"></line>
							<line x1="16" y1="17" x2="8" y2="17"></line>
							<polyline points="10 9 9 9 8 9"></polyline>
						</svg>
						@(_showDetails ? "Hide Details" : "Transaction Details")
					</button>
				</div>
			</div>
			<div class="section-body grid-body">
				<SfGrid ID="_sfStockGrid"
						@ref="_sfStockGrid"
						TValue="ProductStockSummaryModel"
						DataSource="_stockSummary"
						AllowTextWrap="true"
						AllowPaging="true"
						AllowSorting="true"
						AllowResizing="true"
						AllowFiltering="true"
						AllowExcelExport="true"
						AllowPdfExport="true"
						GridLines="GridLine.Horizontal"
						CssClass="professional-grid"
						Toolbar="@(new List<string>() { "Search" })">

					<GridPageSettings PageSize="20" PageSizes="new int[] { 10, 20, 50, 100 }" />
					<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

					<GridAggregates>
						<GridAggregate>
							<GridAggregateColumns>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.ProductName)" Type="AggregateType.Count">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
										}
										<div class="aggregate-label">
											<strong>Total Items: @aggregate.Count</strong>
										</div>
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.OpeningStock)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.PurchaseStock)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.SaleStock)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.MonthlyStock)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.ClosingStock)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.ClosingValue)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.WeightedAverageValue)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
								<GridAggregateColumn Field="@nameof(ProductStockSummaryModel.LastSaleValue)" Type="AggregateType.Sum" Format="N2">
									<FooterTemplate>
										@{
											var aggregate = (context as AggregateTemplateContext);
											<div><strong>@aggregate.Sum</strong></div>
										}
									</FooterTemplate>
								</GridAggregateColumn>
							</GridAggregateColumns>
						</GridAggregate>
					</GridAggregates>

					<GridColumns>
						<GridColumn Field="@nameof(ProductStockSummaryModel.ProductCode)" HeaderText="Code" Width="120" Visible="_showAllColumns" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.ProductName)" HeaderText="Product" Width="250" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.ProductCategoryName)" HeaderText="Category" Width="180" Visible="_showAllColumns" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.OpeningStock)" HeaderText="Opening Stock" Width="150" Format="N2" TextAlign="TextAlign.Right" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.PurchaseStock)" HeaderText="Purchase" Width="130" Format="N2" TextAlign="TextAlign.Right" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.SaleStock)" HeaderText="Sale" Width="130" Format="N2" TextAlign="TextAlign.Right" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.MonthlyStock)" HeaderText="Monthly Stock" Width="150" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.ClosingStock)" HeaderText="Closing Stock" Width="150" Format="N2" TextAlign="TextAlign.Right">
							<Template>
								@{
									var item = (context as ProductStockSummaryModel);
									<span class="@(item.ClosingStock < 0 ? "stock-negative" : "")">@item.ClosingStock.ToString("N2")</span>
								}
							</Template>
						</GridColumn>
						<GridColumn Field="@nameof(ProductStockSummaryModel.Rate)" HeaderText="Rate" Width="120" Format="N2" TextAlign="TextAlign.Right" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.ClosingValue)" HeaderText="Closing Value" Width="150" Format="N2" TextAlign="TextAlign.Right">
							<Template>
								@{
									var item = (context as ProductStockSummaryModel);
									<span class="grid-total">@item.ClosingValue.ToString("N2")</span>
								}
							</Template>
						</GridColumn>

						<GridColumn Field="@nameof(ProductStockSummaryModel.AveragePrice)" HeaderText="Avg Price" Width="130" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.WeightedAverageValue)" HeaderText="Weighted Avg Value" Width="180" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.LastSalePrice)" HeaderText="Last Sale Price" Width="170" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
						<GridColumn Field="@nameof(ProductStockSummaryModel.LastSaleValue)" HeaderText="Last Sale Value" Width="180" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
					</GridColumns>
				</SfGrid>
			</div>
		</div>

		<!-- Stock Details Grid Section (Visible when _showDetails is true) -->
		@if (_showDetails)
		{
			<div class="section-card">
				<div class="section-header">
					<div class="section-title-wrapper">
						<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
							<polyline points="14 2 14 8 20 8"></polyline>
							<line x1="16" y1="13" x2="8" y2="13"></line>
							<line x1="16" y1="17" x2="8" y2="17"></line>
							<polyline points="10 9 9 9 8 9"></polyline>
						</svg>
						<h2 class="section-title">Stock Details (Transaction Level)</h2>
					</div>
				</div>
				<div class="section-body grid-body">
					<SfGrid ID="_sfStockDetailsGrid"
							@ref="_sfStockDetailsGrid"
							TValue="ProductStockDetailsModel"
							DataSource="_stockDetails"
							AllowTextWrap="true"
							AllowPaging="true"
							AllowSorting="true"
							AllowResizing="true"
							AllowFiltering="true"
							AllowExcelExport="true"
							AllowPdfExport="true"
							GridLines="GridLine.Horizontal"
							CssClass="professional-grid"
							Toolbar="@(new List<string>() { "Search" })">

						<GridPageSettings PageSize="20" PageSizes="new int[] { 10, 20, 50, 100 }" />
						<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

						<GridAggregates>
							<GridAggregate>
								<GridAggregateColumns>
									<GridAggregateColumn Field="@nameof(ProductStockDetailsModel.ProductName)" Type="AggregateType.Count">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
											}
											<div class="aggregate-label">
												<strong>Total Transactions: @aggregate.Count</strong>
											</div>
										</FooterTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(ProductStockDetailsModel.Quantity)" Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
									</GridAggregateColumn>
								</GridAggregateColumns>
							</GridAggregate>
						</GridAggregates>

						<GridColumns>
							<GridColumn HeaderText="Actions" Width="150" TextAlign="TextAlign.Center">
								<Template>
									@{
										var item = (context as ProductStockDetailsModel);
									}
									<div class="grid-actions">
										@if (item.TransactionId is null && item.Type?.ToLower() == "adjustment")
										{
											<button class="btn-grid-action btn-delete" @onclick="() => DeleteAdjustment(item.Id)" title="Delete Adjustment" disabled="@_isProcessing">
												<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
													<polyline points="3 6 5 6 21 6" />
													<path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
													<line x1="10" y1="11" x2="10" y2="17" />
													<line x1="14" y1="11" x2="14" y2="17" />
												</svg>
											</button>
										}
										@if (item.TransactionId is not null && item.Type?.ToLower() != "adjustment")
										{
											<button class="btn-grid-action btn-view" @onclick="() => ViewTransaction(item.Type, item.TransactionId.Value)" title="View Transaction" disabled="@_isProcessing">
												<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
													<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
													<circle cx="12" cy="12" r="3" />
												</svg>
											</button>
											<button class="btn-grid-action btn-invoice" @onclick="() => DownloadInvoice(item.Type, item.TransactionId.Value)" title="Download Invoice" disabled="@_isProcessing">
												<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
													<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
													<polyline points="7 10 12 15 17 10" />
													<line x1="12" y1="15" x2="12" y2="3" />
												</svg>
											</button>
										}
									</div>
								</Template>
							</GridColumn>
							<GridColumn Field="@nameof(ProductStockDetailsModel.TransactionDate)" HeaderText="Date" Width="130" Format="dd/MM/yyyy" Type="ColumnType.Date" />
							<GridColumn Field="@nameof(ProductStockDetailsModel.TransactionNo)" HeaderText="Transaction No" Width="180" />
							<GridColumn Field="@nameof(ProductStockDetailsModel.Type)" HeaderText="Type" Width="150">
								<Template>
									@{
										var item = (context as ProductStockDetailsModel);
										<span class="transaction-type transaction-type-@item.Type.ToLower().Replace(" ", "-")">
											@item.Type
										</span>
									}
								</Template>
							</GridColumn>
							<GridColumn Field="@nameof(ProductStockDetailsModel.ProductCode)" HeaderText="Code" Width="120" />
							<GridColumn Field="@nameof(ProductStockDetailsModel.ProductName)" HeaderText="Raw Material" Width="250" />
							<GridColumn Field="@nameof(ProductStockDetailsModel.Quantity)" HeaderText="Quantity" Width="130" Format="N2" TextAlign="TextAlign.Right">
								<Template>
									@{
										var item = (context as ProductStockDetailsModel);
										<span class="@(item.Quantity < 0 ? "stock-negative" : "stock-positive")">
											@item.Quantity.ToString("N2")
										</span>
									}
								</Template>
							</GridColumn>
							<GridColumn Field="@nameof(ProductStockDetailsModel.NetRate)" HeaderText="Rate" Width="120" Format="N2" TextAlign="TextAlign.Right" />
						</GridColumns>
					</SfGrid>
				</div>
			</div>
		}
	</div>
}

<SfToast @ref="_sfErrorToast"
		 ID="_sfErrorToast"
		 Title="@_errorTitle"
		 Content="@_errorMessage"
		 Timeout="5000">
	<ToastPosition X="Right" Y="Top" />
	<ToastShowAnimationSettings Effect="ToastEffect.SlideLeftIn" />
	<ToastHideAnimationSettings Effect="ToastEffect.SlideRightOut" />
</SfToast>

