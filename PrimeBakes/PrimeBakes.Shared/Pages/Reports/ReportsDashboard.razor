@page "/Reports-Dashboard"

<PageTitle>Reports Dashboard - Prime Bakes</PageTitle>

@if (_isLoading || _user is null)
{
	<div class="loader-container">
		<div class="circular-dots-loader">
			<span class="dot dot-1"></span>
			<span class="dot dot-2"></span>
			<span class="dot dot-3"></span>
		</div>
		<p class="loading-text">Loading reports dashboard...</p>
	</div>
}
else
{
	<div class="dashboard-container">
		<div class="dashboard-header">
			<div class="logo-section">
				<img src="images/logo.png" alt="Prime Bakes Logo" class="dashboard-logo" />
				<h1 class="dashboard-title">Prime Bakes</h1>
			</div>
			<div class="user-info">
				<span class="user-name">@_user?.Name</span>
				<button @onclick='() => NavigationManager.NavigateTo("/")' class="back-button">
					<span class="back-icon">←</span> Back to Dashboard
				</button>
			</div>
		</div>

		<div class="welcome-section">
			<h2>Reports Management</h2>
			<p>Select an option below to view various reports and analytics</p>
		</div>

		<div class="dashboard-cards">
			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/Sale/Summary")'>
				<div class="card-icon summary-report-icon">📊</div>
				<h3>Sale Summary Reports</h3>
				<p>View overall business performance metrics</p>
			</div>

			@if (_user.LocationId == 1)
			{
				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/ProductSummary")'>
					<div class="card-icon item-summary-icon">📋</div>
					<h3>Finished Goods / Product Summary Report</h3>
					<p>View aggregated product sales analytics</p>
				</div>
			}

			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/Sale/Detailed/")'>
				<div class="card-icon detailed-report-icon">📈</div>
				<h3>Sale Detailed Reports</h3>
				<p>View comprehensive sales and transaction details</p>
			</div>

			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/ProductDetail")'>
				<div class="card-icon item-report-icon">📦</div>
				<h3>Finished Goods / Product Detailed Reports</h3>
				<p>Track individual product performance</p>
			</div>

			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/OrderHistory")'>
				<div class="card-icon order-history-icon">📜</div>
				<h3>Order History</h3>
				<p>Track and analyze customer order records</p>
			</div>

			@if (_user.LocationId == 1)
			{
				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/Purchase")'>
					<div class="card-icon purchase-report-icon">🛒</div>
					<h3>Raw Material Purchase Report</h3>
					<p>Track and analyze procurement activities and expenditures</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/KitchenIssue")'>
					<div class="card-icon kitchen-issue-icon">🔔</div>
					<h3>Kitchen Issue Report</h3>
					<p>Track and manage kitchen-related issues and incidents</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/KitchenProduction")'>
					<div class="card-icon kitchen-production-icon">👨‍🍳</div>
					<h3>Kitchen Production Report</h3>
					<p>Monitor kitchen output and production efficiency</p>
				</div>

				<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/RawMaterialStockReport")'>
					<div class="card-icon stock-report-icon">🧮</div>
					<h3>Raw Material Stock Reports</h3>
					<p>Monitor inventory levels and stock status</p>
				</div>
			}

			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/FinishedProductStockReport")'>
				<div class="card-icon product-stock-icon">📦</div>
				<h3>Finished Goods / Product Stock Report</h3>
				<p>View finished product inventory levels and stock status</p>
			</div>

			<div class="dashboard-card" @onclick='() => NavigationManager.NavigateTo("/Reports/SaleReturn")'>
				<div class="card-icon sale-return-icon">🔄</div>
				<h3>Sale Return Report</h3>
				<p>Track and analyze product returns and refund activities</p>
			</div>
		</div>

		<div class="dashboard-footer">
			<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
		</div>
	</div>
}

<style>
	:root {
		--primary-color: #e2137b;
		--primary-dark: #c10e69;
		--primary-light: #ff4d9f;
		--secondary-color: #2c3e50;
		--accent-color: #ffb3d1;
		--light-bg: #fff5f9;
		--dark-text: #2c3e50;
		--success-color: #28a745;
		--warning-color: #ffc107;
		--danger-color: #dc3545;
		--info-color: #17a2b8;
	}

	/* General Layout */
	body {
		margin: 0;
		padding: 0;
		background-color: var(--light-bg);
		color: var(--dark-text);
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		overflow-x: hidden;
	}

	.dashboard-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		padding: 20px;
		background: linear-gradient(135deg, rgba(226, 19, 123, 0.05) 0%, rgba(193, 14, 105, 0.05) 100%);
	}

	/* Header Styles */
	.dashboard-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 15px 25px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		margin-bottom: 30px;
		border-left: 5px solid var(--primary-color);
	}

	.logo-section {
		display: flex;
		align-items: center;
	}

	.dashboard-logo {
		width: 55px;
		height: 55px;
		border-radius: 50%;
		margin-right: 15px;
		border: 3px solid var(--accent-color);
	}

	.dashboard-title {
		color: var(--primary-color);
		font-size: 28px;
		font-weight: 700;
		margin: 0;
		text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
	}

	.user-info {
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.user-name {
		font-weight: 600;
		color: var(--primary-dark);
		font-size: 16px;
	}

	/* Welcome Section */
	.welcome-section {
		text-align: center;
		margin-bottom: 40px;
		padding: 20px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
	}

		.welcome-section h2 {
			color: var(--primary-color);
			margin-bottom: 10px;
			font-size: 24px;
			font-weight: 600;
		}

		.welcome-section p {
			color: var(--dark-text);
			opacity: 0.8;
			font-size: 16px;
			margin: 0;
		}

	/* Back button styles */
	.back-button {
		background-color: transparent;
		border: 2px solid var(--primary-dark);
		color: var(--primary-dark);
		padding: 10px 18px;
		border-radius: 10px;
		cursor: pointer;
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		gap: 8px;
		transition: all 0.3s ease;
		font-size: 14px;
	}

		.back-button:hover {
			background-color: var(--primary-dark);
			color: white;
			transform: translateY(-1px);
		}

	.back-icon {
		font-size: 16px;
	}

	/* Dashboard cards */
	.dashboard-cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 25px;
		margin-bottom: 40px;
	}

	.dashboard-card {
		background-color: white;
		border-radius: 18px;
		padding: 30px;
		text-align: center;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		cursor: pointer;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 220px;
		border-left: 5px solid var(--accent-color);
		position: relative;
		overflow: hidden;
	}

		.dashboard-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 3px;
			background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
			transform: translateX(-100%);
			transition: transform 0.3s ease;
		}

		.dashboard-card:hover::before {
			transform: translateX(0);
		}

		.dashboard-card:hover {
			transform: translateY(-8px);
			box-shadow: 0 15px 35px rgba(226, 19, 123, 0.3);
		}

	.card-icon {
		font-size: 45px;
		margin-bottom: 20px;
		width: 90px;
		height: 90px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		margin: 0 auto 20px auto;
	}

	/* Custom icons for report pages */
	.summary-report-icon {
		background-color: rgba(0, 164, 239, 0.1);
		color: var(--info-color);
	}

	.detailed-report-icon {
		background-color: rgba(104, 33, 122, 0.1);
		color: var(--primary-dark);
	}

	.item-report-icon {
		background-color: rgba(81, 43, 212, 0.1);
		color: var(--primary-color);
	}

	.stock-report-icon {
		background-color: rgba(46, 196, 134, 0.1);
		color: #2EC486;
	}

	.item-summary-icon {
		background-color: rgba(255, 153, 0, 0.1);
		color: #FF9900;
	}

	.order-history-icon {
		background-color: rgba(255, 87, 51, 0.1);
		color: #FF5733;
	}

	.product-stock-icon {
		background-color: rgba(41, 128, 185, 0.1);
		color: #2980B9;
	}

	.kitchen-issue-icon {
		background-color: rgba(231, 76, 60, 0.1);
		color: #E74C3C;
	}

	.kitchen-production-icon {
		background-color: rgba(155, 89, 182, 0.1);
		color: #9B59B6;
	}

	.purchase-report-icon {
		background-color: rgba(39, 174, 96, 0.1);
		color: #27AE60;
	}

	.sale-return-icon {
		background-color: rgba(220, 53, 69, 0.1);
		color: #dc3545;
	}

	.dashboard-card h3 {
		color: var(--dark-text);
		margin-bottom: 15px;
		font-size: 20px;
		font-weight: 600;
	}

	.dashboard-card p {
		color: #666;
		font-size: 14px;
		margin: 0;
		line-height: 1.4;
	}

	/* Footer */
	.dashboard-footer {
		margin-top: auto;
		text-align: center;
		padding: 25px;
		color: var(--primary-dark);
		font-size: 14px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
	}

	.footer-link {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

		.footer-link:hover {
			color: var(--primary-dark);
			text-decoration: underline;
		}

	/* Loading Animation */
	.loader-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
		background-color: var(--light-bg);
	}

	.circular-dots-loader {
		position: relative;
		width: 70px;
		height: 70px;
		margin-bottom: 20px;
	}

		.circular-dots-loader .dot {
			position: absolute;
			width: 14px;
			height: 14px;
			border-radius: 50%;
			animation: rotate 1.8s infinite linear;
		}

		.circular-dots-loader .dot-1 {
			background-color: var(--primary-color);
			animation-delay: 0s;
		}

		.circular-dots-loader .dot-2 {
			background-color: var(--primary-dark);
			animation-delay: -0.6s;
		}

		.circular-dots-loader .dot-3 {
			background-color: var(--accent-color);
			animation-delay: -1.2s;
		}

	.loading-text {
		color: var(--dark-text);
		font-size: 16px;
		margin-top: 10px;
		font-weight: 500;
	}

	/* Animations */
	@@keyframes rotate {
		0% {
			transform: rotate(0deg) translate(-28px) rotate(0deg);
		}

		100% {
			transform: rotate(360deg) translate(-28px) rotate(-360deg);
		}
	}

	/* Responsive Design */
	@@media (max-width: 768px) {
		.dashboard-header {
			flex-direction: column;
			gap: 15px;
			padding: 20px;
		}

		.dashboard-title {
			font-size: 24px;
		}

		.dashboard-cards {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.dashboard-card {
			min-height: 200px;
			padding: 25px;
		}

		.card-icon {
			font-size: 40px;
			width: 80px;
			height: 80px;
		}

		.dashboard-card h3 {
			font-size: 18px;
		}
	}

	@@media (max-width: 480px) {
		.dashboard-container {
			padding: 15px;
		}

		.dashboard-header {
			padding: 15px;
		}

		.dashboard-title {
			font-size: 20px;
		}

		.dashboard-card {
			padding: 20px;
		}
	}
</style>


