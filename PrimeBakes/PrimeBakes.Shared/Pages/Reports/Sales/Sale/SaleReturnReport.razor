@page "/report/sale-return"

@using PrimeBakesLibrary.Models.Common
@using PrimeBakesLibrary.Models.Accounts.Masters
@using PrimeBakesLibrary.Models.Sales
@using PrimeBakesLibrary.Models.Sales.Sale

<PageTitle>Sale Return Report - Prime Bakes</PageTitle>

@if (_isLoading)
{
    <SfSpinner @bind-Visible="_isLoading" Label="Page is Loading, Please Wait" />
}
else
{
    <PageHeader Title="Sale Return Report" Subtitle="View and analyze sale return transactions" ShowHome="true" ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack">
        <RightContent>
            <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)" Disabled="_isProcessing" OnClick="ExportExcel" />
            <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)" Disabled="_isProcessing" OnClick="ExportPdf" />
            <IconButton Icon="IconType.Refresh" Title="Refresh Data (Ctrl + R)" Disabled="_isProcessing" OnClick="LoadTransactionOverviews" />
            <IconButton Icon="IconType.Report" Title="Item Report (Ctrl + I)" Disabled="_isProcessing" OnClick="NavigateToItemReport" />
            <IconButton Icon="IconType.New" Title="New Transaction (Ctrl + N)" Disabled="_isProcessing" OnClick="NavigateToTransactionPage" />
        </RightContent>
    </PageHeader>

    <!-- Main Content Container -->
    <div class="report-container">

        <!-- Filters Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-title-wrapper">
                    <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
                    </svg>
                    <h2 class="section-title">Filters</h2>
                </div>
            </div>
            <div class="section-body">
                <div class="filters-container">
                    <div class="filters-grid">
                        <!-- Date Range -->
                        <div class="form-field">
                            <label class="field-label">Date Range</label>
                            <SfDateRangePicker CssClass="custom-daterange" StartDate="_fromDate" EndDate="_toDate"
                                TValue="DateTime" Format="dd/MM/yyyy" AllowEdit="true" Placeholder="Select date range">
                                <DateRangePickerEvents TValue="DateTime" ValueChange="OnDateRangeChanged" />
                            </SfDateRangePicker>
                        </div>

                        @if (_user.LocationId == 1)
                        {
                            <!-- Location -->
                            <div class="form-field">
                                <label class="field-label">Location</label>
                                <SfAutoComplete CssClass="custom-autocomplete" Value="@_selectedLocation" TValue="LocationModel"
                                    TItem="LocationModel" DataSource="@_locations" Placeholder="All Locations"
                                    AllowFiltering="true" FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
                                    <AutoCompleteEvents TItem="LocationModel" TValue="LocationModel"
                                        ValueChange="OnLocationChanged" />
                                    <AutoCompleteFieldSettings Value="Name" />
                                </SfAutoComplete>
                            </div>

                            <!-- Company -->
                            <div class="form-field">
                                <label class="field-label">Company</label>
                                <SfAutoComplete CssClass="custom-autocomplete" Value="@_selectedCompany" TValue="CompanyModel"
                                    TItem="CompanyModel" DataSource="@_companies" Placeholder="All Companies"
                                    AllowFiltering="true" FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
                                    <AutoCompleteEvents TItem="CompanyModel" TValue="CompanyModel"
                                        ValueChange="OnCompanyChanged" />
                                    <AutoCompleteFieldSettings Value="Name" />
                                </SfAutoComplete>
                            </div>

                            <!-- Party -->
                            <div class="form-field">
                                <label class="field-label">Party</label>
                                <SfAutoComplete CssClass="custom-autocomplete" Value="@_selectedParty" TValue="LedgerModel"
                                    TItem="LedgerModel" DataSource="@_parties" Placeholder="All Parties" AllowFiltering="true"
                                    FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains">
                                    <AutoCompleteEvents TItem="LedgerModel" TValue="LedgerModel" ValueChange="OnPartyChanged" />
                                    <AutoCompleteFieldSettings Value="Name" />
                                </SfAutoComplete>
                            </div>
                        }
                    </div>

                    <!-- Date Utility Buttons -->
                    <div class="date-utilities">
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.Today)" title="Today"
                            disabled="@_isProcessing">
                            <span>Today</span>
                        </button>
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.Yesterday)"
                            title="Yesterday" disabled="@_isProcessing">
                            <span>Yesterday</span>
                        </button>
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.CurrentMonth)"
                            title="Current Month" disabled="@_isProcessing">
                            <span>Current Month</span>
                        </button>
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.PreviousMonth)"
                            title="Previous Month" disabled="@_isProcessing">
                            <span>Previous Month</span>
                        </button>
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.CurrentFinancialYear)"
                            title="Current Financial Year" disabled="@_isProcessing">
                            <span>Current FY</span>
                        </button>
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.PreviousFinancialYear)"
                            title="Previous Financial Year" disabled="@_isProcessing">
                            <span>Previous FY</span>
                        </button>
                        <button class="btn-date-utility" @onclick="() => SetDateRange(DateRangeType.AllTime)"
                            title="All Time" disabled="@_isProcessing">
                            <span>All Time</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Report Grid Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-title-wrapper">
                    <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="8" y1="6" x2="21" y2="6" />
                        <line x1="8" y1="12" x2="21" y2="12" />
                        <line x1="8" y1="18" x2="21" y2="18" />
                        <line x1="3" y1="6" x2="3.01" y2="6" />
                        <line x1="3" y1="12" x2="3.01" y2="12" />
                        <line x1="3" y1="18" x2="3.01" y2="18" />
                    </svg>
                    <h2 class="section-title">Sale Return Transactions</h2>
                </div>
                <div class="section-actions">
                    @if (_user.Admin && _user.LocationId == 1)
                    {
                        <button class="btn-toggle-deleted @(_showDeleted ? "active" : "")" @onclick="ToggleDeleted"
                            title="@(_showDeleted ? "Hide Deleted Items" : "Show Deleted Items")" disabled="@_isProcessing">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 6h18" />
                                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
                                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
                            </svg>
                            @(_showDeleted ? "Hide Deleted" : "Show Deleted")
                        </button>
                    }
                    <button class="btn-toggle-details" @onclick="ToggleDetailsView"
                        title="@(_showAllColumns ? "Show Less" : "Show All Details")" disabled="@_isProcessing">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            @if (_showAllColumns)
                            {
                                <circle cx="12" cy="12" r="1" />
                                <circle cx="19" cy="12" r="1" />
                                <circle cx="5" cy="12" r="1" />
                            }
                            else
                            {
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                <line x1="9" y1="9" x2="15" y2="9" />
                                <line x1="9" y1="15" x2="15" y2="15" />
                            }
                        </svg>
                        @(_showAllColumns ? "Show Less" : "Details")
                    </button>
                </div>
            </div>
            <div class="section-body grid-body">
                <SfGrid ID="_sfGrid" @ref="_sfGrid" TValue="SaleReturnOverviewModel"
                    DataSource="_transactionOverviews" AllowTextWrap="true" AllowPaging="true" AllowSorting="true"
                    AllowResizing="true" AllowFiltering="true" AllowExcelExport="true" AllowPdfExport="true"
                    GridLines="GridLine.Horizontal" CssClass="professional-grid"
                    Toolbar="@(new List<string>() { "Search" })">

                    <GridPageSettings PageSize="20" PageSizes="new int[] { 10, 20, 50, 100 }" />
                    <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

                    <GridAggregates>
                        <GridAggregate>
                            <GridAggregateColumns>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TransactionNo)"
                                    Type="AggregateType.Count">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                        }
                                        <div class="aggregate-label">
                                            <strong>Total Items: @aggregate.Count</strong>
                                        </div>
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalItems)"
                                    Type="AggregateType.Sum" Format="N0">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalQuantity)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.BaseTotal)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.ItemDiscountAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-discount"><strong>@aggregate.Sum</strong>
                                            </div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalAfterItemDiscount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalInclusiveTaxAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalExtraTaxAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalAfterTax)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.OtherChargesAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.DiscountAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-discount"><strong>@aggregate.Sum</strong>
                                            </div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.RoundOffAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.TotalAmount)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.Cash)" Type="AggregateType.Sum"
                                    Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.UPI)" Type="AggregateType.Sum"
                                    Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.Card)" Type="AggregateType.Sum"
                                    Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                                <GridAggregateColumn Field="@nameof(SaleReturnOverviewModel.Credit)"
                                    Type="AggregateType.Sum" Format="N2">
                                    <FooterTemplate>
                                        @{
                                            var aggregate = (context as AggregateTemplateContext);
                                            <div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
                                        }
                                    </FooterTemplate>
                                </GridAggregateColumn>
                            </GridAggregateColumns>
                        </GridAggregate>
                    </GridAggregates>

                    <GridColumns>
                        <GridColumn HeaderText="Actions" Width="200" TextAlign="TextAlign.Center">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                }
                                <div class="grid-actions">
                                    @if (item .Status == false)
                                    {
                                        <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Size="ButtonSize.Grid" Title="Download Excel Invoice (Alt + E)" Disabled="_isProcessing" OnClick="@(() => DownloadExcelInvoice(item.Id))" />
                                        <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Size="ButtonSize.Grid" Title="Download PDF Invoice (Alt + P)" Disabled="_isProcessing" OnClick="@(() => DownloadPdfInvoice(item.Id))" />
                                        @if (_user.Admin && _user.LocationId == 1)
                                        {
                                            <IconButton Icon="IconType.Recover" Variant="ButtonVariant.Recover" Size="ButtonSize.Grid" Title="Recover Transaction (Delete)" Disabled="_isProcessing" OnClick="@(() => ShowRecoverConfirmation(item.Id, item.TransactionNo))" />
                                        }
                                    }
                                    else
                                    {
                                        <IconButton Icon="IconType.View" Variant="ButtonVariant.View" Size="ButtonSize.Grid" Title="View Transaction (Ctrl + O)" Disabled="_isProcessing" OnClick="@(() => ViewTransaction(item.Id))" />
                                        <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Size="ButtonSize.Grid" Title="Download Excel Invoice (Alt + E)" Disabled="_isProcessing" OnClick="@(() => DownloadExcelInvoice(item.Id))" />
                                        <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Size="ButtonSize.Grid" Title="Download PDF Invoice (Alt + P)" Disabled="_isProcessing" OnClick="@(() => DownloadPdfInvoice(item.Id))" />
                                        @if (_user.Admin && _user.LocationId == 1)
                                        {
                                            <IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete" Size="ButtonSize.Grid" Title="Delete Transaction (Delete)" Disabled="_isProcessing" OnClick="@(() => ShowDeleteConfirmation(item.Id, item.TransactionNo))" />
                                        }
                                    }
                                </div>
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TransactionNo)" HeaderText="Trans No" Width="170" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TransactionDateTime)" HeaderText="Date" Width="150" Format="dd/MM/yy hh:mm tt" Type="ColumnType.DateTime" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.CompanyName)" HeaderText="Company" Width="180" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.LocationName)" HeaderText="Location" Width="180" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.PartyName)" HeaderText="Party" Width="200" Visible="_user.LocationId == 1" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.CustomerName)" HeaderText="Customer" Width="200" Visible="_user.LocationId == 1" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.FinancialYear)" HeaderText="Financial Year" Width="150" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalItems)" HeaderText="Items" Width="100" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalQuantity)" HeaderText="Qty" Width="120" Format="N2" TextAlign="TextAlign.Right" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.BaseTotal)" HeaderText="Base Total" Width="130" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.ItemDiscountAmount)" HeaderText="Item Disc" Width="130" TextAlign="TextAlign.Right" Visible="_showAllColumns">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-discount">@item.DiscountAmount.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalAfterItemDiscount)" HeaderText="After Disc" Width="140" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalInclusiveTaxAmount)" HeaderText="Incl Tax" Width="120" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalExtraTaxAmount)" HeaderText="Extra Tax" Width="120" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalAfterTax)" HeaderText="Sub Total" Width="130" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.OtherChargesPercent)" HeaderText="Other Charges %" Width="150" Format="N2" TextAlign="TextAlign.Center" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.OtherChargesAmount)" HeaderText="Other Charges" Width="140" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.DiscountPercent)" HeaderText="Disc %" Width="130" Format="N2" TextAlign="TextAlign.Center" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.DiscountAmount)" HeaderText="Disc" Width="130" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-discount">@item.DiscountAmount.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.RoundOffAmount)" HeaderText="Round Off" Width="120" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.TotalAmount)" HeaderText="Total" Width="150" TextAlign="TextAlign.Right">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-total">@item.TotalAmount.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.Cash)" HeaderText="Cash" Width="150" TextAlign="TextAlign.Right" Visible="_showAllColumns">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-total">@item.Cash.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.UPI)" HeaderText="UPI" Width="150" TextAlign="TextAlign.Right" Visible="_showAllColumns">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-total">@item.UPI.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.Card)" HeaderText="Card" Width="150" TextAlign="TextAlign.Right" Visible="_showAllColumns">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-total">@item.Card.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.Credit)" HeaderText="Credit" Width="150" TextAlign="TextAlign.Right" Visible="_showAllColumns">
                            <Template>
                                @{
                                    var item = (context as SaleReturnOverviewModel);
                                    <span class="grid-total">@item.Credit.ToString("N2")</span>
                                }
                            </Template>
                        </GridColumn>
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.PaymentModes)" HeaderText="Payment Modes" Width="180" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.Remarks)" HeaderText="Remarks" Width="200" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.CreatedByName)" HeaderText="Created By" Width="150" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.CreatedAt)" HeaderText="Created At" Width="160" Format="dd/MM/yy hh:mm tt" Type="ColumnType.DateTime" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.CreatedFromPlatform)" HeaderText="Created Platform" Width="200" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.LastModifiedByUserName)" HeaderText="Modified By" Width="150" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.LastModifiedAt)" HeaderText="Modified At" Width="160" Format="dd/MM/yy hh:mm tt" Type="ColumnType.DateTime" Visible="_showAllColumns" />
                        <GridColumn Field="@nameof(SaleReturnOverviewModel.LastModifiedFromPlatform)" HeaderText="Modified Platform" Width="200" Visible="_showAllColumns" />
                    </GridColumns>
                </SfGrid>
            </div>
        </div>
    </div>
}

<ToastNotification @ref="_toastNotification" />

<SfDialog @ref="_deleteConfirmationDialog" Width="500px" IsModal="true" ShowCloseIcon="true"
    @bind-Visible="_isDeleteDialogVisible">
    <DialogTemplates>
        <Header>
            <div style="display: flex; align-items: center; gap: 12px; padding: 4px 0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    style="color: #ef4444;">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="12" y1="8" x2="12" y2="12" />
                    <line x1="12" y1="16" x2="12.01" y2="16" />
                </svg>
                <span style="font-size: 18px; font-weight: 600; color: #0f172a;">Confirm Delete</span>
            </div>
        </Header>
        <Content>
            <div style="padding: 24px;">
                <p style="margin: 0 0 16px 0; font-size: 15px; color: #334155; line-height: 1.6;">
                    Are you sure you want to delete this transaction?
                </p>
                <div
                    style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 16px; margin-bottom: 20px;">
