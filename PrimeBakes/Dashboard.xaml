<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeBakes.Dashboard"
             Title="Dashboard">

	<ContentPage.Resources>
		<ResourceDictionary>
			<!-- Minimalist Color Palette -->
			<Color x:Key="PrimaryColor">#2C3E50</Color>
			<Color x:Key="AccentColor">#3498DB</Color>
			<Color x:Key="SuccessColor">#27AE60</Color>
			<Color x:Key="BackgroundColor">#FAFAFA</Color>
			<Color x:Key="CardColor">#FFFFFF</Color>
			<Color x:Key="TextPrimary">#2C3E50</Color>
			<Color x:Key="TextSecondary">#7F8C8D</Color>
			<Color x:Key="BorderColor">#ECF0F1</Color>

			<!-- Minimalist Styles -->
			<Style x:Key="CardStyle" TargetType="Border">
				<Setter Property="BackgroundColor" Value="{StaticResource CardColor}" />
				<Setter Property="StrokeThickness" Value="0" />
				<Setter Property="StrokeShape" Value="RoundRectangle 12" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="Margin" Value="8" />
				<Setter Property="Shadow">
					<Shadow Brush="MediumPurple" Opacity="1" Radius="8" Offset="0,2" />
				</Setter>
			</Style>

			<Style x:Key="ButtonContentStyle" TargetType="StackLayout">
				<Setter Property="Spacing" Value="12" />
				<Setter Property="Padding" Value="24" />
				<Setter Property="VerticalOptions" Value="Center" />
				<Setter Property="HorizontalOptions" Value="Center" />
			</Style>

			<Style x:Key="IconStyle" TargetType="Label">
				<Setter Property="FontSize" Value="32" />
				<Setter Property="HorizontalOptions" Value="Center" />
			</Style>

			<Style x:Key="TitleStyle" TargetType="Label">
				<Setter Property="FontSize" Value="18" />
				<Setter Property="FontAttributes" Value="Bold" />
				<Setter Property="FontFamily" Value="CascadiaCodeSemiBold" />
				<Setter Property="TextColor" Value="MediumOrchid" />
				<Setter Property="HorizontalOptions" Value="Center" />
			</Style>

			<Style x:Key="SubtitleStyle" TargetType="Label">
				<Setter Property="FontSize" Value="13" />
				<Setter Property="FontFamily" Value="CascadiaCodeRegular" />
				<Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
				<Setter Property="HorizontalOptions" Value="Center" />
				<Setter Property="HorizontalTextAlignment" Value="Center" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- Header -->
		<Border Grid.Row="0" 
				StrokeThickness="0"
				Padding="20"
				Margin="0,0,0,16">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<StackLayout Grid.Column="0" VerticalOptions="Center">
					<Label Text="Prime Bakes"
						   FontSize="24"
						   FontFamily="CascadiaCodeRegular"
						   FontAttributes="Bold"
						   TextColor="MediumPurple" />
					<Label Text="Bakery Management System"
						   FontFamily="CascadiaCodeRegular"
						   TextColor="{StaticResource TextSecondary}"
						   FontSize="12" />
				</StackLayout>

				<Button Grid.Column="1"
						Text="Log Out" 
						BackgroundColor="Transparent"
						TextColor="IndianRed"
						BorderColor="IndianRed"
						BorderWidth="1"
						CornerRadius="8"
						Padding="16,8"
						FontSize="14"
						FontFamily="CascadiaCodeRegular"
						Clicked="LogOutButton_Clicked" />
			</Grid>
		</Border>

		<!-- Main Content -->
		<ScrollView Grid.Row="1" Padding="16,0">
			<StackLayout Spacing="32" Padding="0,16">

				<!-- Welcome Section -->
				<StackLayout Spacing="8">
					<Label Text="Welcome Back!"
						   FontSize="20"
						   FontAttributes="Bold"
						   TextColor="MediumPurple"
						   FontFamily="CascadiaCodeRegular"
						   HorizontalOptions="Center" />
					<Label Text="Choose an option to get started"
						   FontSize="14"
						   FontFamily="CascadiaCodeRegular"
						   TextColor="{StaticResource TextSecondary}"
						   HorizontalOptions="Center"
						   HorizontalTextAlignment="Center" />
				</StackLayout>

				<!-- Action Cards -->
				<Grid ColumnDefinitions="*,*" 
					  RowDefinitions="Auto"
					  ColumnSpacing="16">

					<!-- Order Card -->
					<Border Grid.Column="0"
							x:Name="orderBorder"
							Style="{StaticResource CardStyle}"
							IsVisible="False">
						<Border.GestureRecognizers>
							<TapGestureRecognizer Tapped="OrderButton_Clicked" />
						</Border.GestureRecognizers>

						<StackLayout Style="{StaticResource ButtonContentStyle}">
							<Label Text="ðŸ“¦" 
								   Style="{StaticResource IconStyle}"/>
							<Label Text="ORDERS" 
								   Style="{StaticResource TitleStyle}" />
							<Label Text="Place New Orders"
								   Style="{StaticResource SubtitleStyle}"
								   MaxLines="2" />
						</StackLayout>
					</Border>

					<!-- Sale Card -->
					<Border Grid.Column="1"
							x:Name="saleBorder"
							Style="{StaticResource CardStyle}"
							IsVisible="False">
						<Border.GestureRecognizers>
							<TapGestureRecognizer Tapped="SaleButton_Clicked" />
						</Border.GestureRecognizers>

						<StackLayout Style="{StaticResource ButtonContentStyle}">
							<Label Text="ðŸ’³" 
								   Style="{StaticResource IconStyle}" />
							<Label Text="SALES" 
								   Style="{StaticResource TitleStyle}" />
							<Label Text="Process New Sales"
								   Style="{StaticResource SubtitleStyle}"
								   MaxLines="2" />
						</StackLayout>
					</Border>
				</Grid>

			</StackLayout>
		</ScrollView>

		<!-- Footer -->
		<Border Grid.Row="2" 
				BackgroundColor="{StaticResource CardColor}"
				StrokeThickness="0"
				Padding="20,12">
			<Border.Shadow>
				<Shadow Brush="MediumPurple" Opacity="1" Radius="4" Offset="0,-2" />
			</Border.Shadow>

			<Label HorizontalOptions="Center" 
				   FontSize="12">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="Â© A Product By "
							  TextColor="Black"
							  FontFamily="CascadiaCodeRegular" />
						<Span Text="AadiSoft" 
							  TextColor="MediumPurple" 
							  FontFamily="CascadiaCodeRegular"
							  FontAttributes="Bold"/>
						<Span Text=". All rights reserved."
							  TextColor="Black"
							  FontFamily="CascadiaCodeRegular"/>
					</FormattedString>
				</Label.FormattedText>
				<Label.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnAadiSoftTapped" />
				</Label.GestureRecognizers>
			</Label>
		</Border>
	</Grid>
</ContentPage>