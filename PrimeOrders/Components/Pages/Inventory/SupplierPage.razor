@page "/Inventory/Supplier"

<PageTitle>Suppliers - Prime Orders</PageTitle>

<SfToast @ref="_sfToast"
		 ID="toast_success"
		 Title="Success"
		 Content="Supplier saved successfully."
		 Timeout="3000"
		 ShowCloseButton="true"
		 CssClass="e-toast-success">
	<ToastPosition X="Right" Y="Top" />
	<ToastEvents Closed="@ClosedHandler" />
</SfToast>

<SfToast @ref="_sfUpdateToast"
		 ID="toast_update"
		 Title="Supplier Found"
		 Content="Supplier found. Please update the information."
		 Timeout="3000"
		 ShowCloseButton="true"
		 CssClass="e-toast-info">
	<ToastPosition X="Right" Y="Top" />
</SfToast>

@if (IsLoading)
{
	<div class="loader-container">
		<div class="circular-dots-loader">
			<span class="dot dot-1"></span>
			<span class="dot dot-2"></span>
			<span class="dot dot-3"></span>
		</div>
		<p class="loading-text">Loading suppliers...</p>
	</div>
}
else
{
	<div class="supplier-container">
		<div class="page-header">
			<h1 class="page-title">Supplier Management</h1>
			<button @onclick='() => NavigateTo("/Inventory-Dashboard")' class="back-button">
				<span class="back-icon">←</span> Back to Inventory
			</button>
		</div>

		<div class="supplier-content">
			<div class="selection-card">
				<div class="card-header">
					<h2>Supplier Details</h2>
					<p class="card-info">Enter or update supplier information</p>
				</div>
				<div class="card-body">
					<div class="form-row">
						<div class="form-group">
							<label>Supplier Name</label>
							<SfTextBox @bind-Value="_supplierModel.Name"
									   Placeholder="Enter Supplier Name"
									   CssClass="form-control" />
						</div>

						<div class="form-group">
							<label>Supplier Code</label>
							<SfTextBox @bind-Value="_supplierModel.Code"
									   Placeholder="Enter Supplier Code"
									   CssClass="form-control" />
						</div>
					</div>

					<div class="form-row">
						<div class="form-group">
							<label>GST Number</label>
							<SfTextBox @bind-Value="_supplierModel.GSTNo"
									   Placeholder="Enter GST Number"
									   CssClass="form-control" />
						</div>

						<div class="form-group">
							<label>Phone Number</label>
							<SfTextBox @bind-Value="_supplierModel.Phone"
									   Placeholder="Enter Phone Number"
									   Type="InputType.Number"
									   CssClass="form-control" />
						</div>
					</div>

					<div class="form-row">
						<div class="form-group">
							<label>Email Address</label>
							<SfTextBox @bind-Value="_supplierModel.Email"
									   Placeholder="Enter Email Address"
									   CssClass="form-control" />
						</div>

						<div class="form-group">
							<label>State</label>
							<SfComboBox TValue="int"
										TItem="StateModel"
										Placeholder="Select a State"
										DataSource="@_states"
										@bind-Value="_supplierModel.StateId"
										PopupWidth="100%"
										CssClass="form-control">
								<ComboBoxFieldSettings Value="Id" Text="Name" />
							</SfComboBox>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group">
							<label>Status</label>
							<div class="checkbox-container">
								<SfCheckBox @bind-Checked="_supplierModel.Status" Label="Active" CssClass="form-checkbox" />
							</div>
						</div>

						<div class="form-group full-width">
							<label>Address</label>
							<SfTextBox @bind-Value="_supplierModel.Address"
									   Placeholder="Enter Full Address"
									   Multiline="true"
									   CssClass="form-control" />
						</div>
					</div>

					<div class="save-container">
						<button @onclick="OnSaveClick" class="save-button">
							<span class="save-icon">💾</span> Save Supplier
						</button>
					</div>
				</div>
			</div>

			<div class="grid-card">
				<div class="card-header">
					<h2>Suppliers List</h2>
					<p class="grid-info">Select a row to edit supplier details</p>
				</div>
				<div class="card-body">
					<SfGrid DataSource="@_suppliers"
							ID="_sfGrid"
							@ref="_sfGrid"
							AllowSorting="true"
							AllowFiltering="true"
							AllowResizing="true"
							CssClass="supplier-grid">
						<GridEvents RowSelected="RowSelectHandler" TValue="SupplierModel" />
						<GridColumns>
							<GridColumn Field=@nameof(SupplierModel.Id) HeaderText="ID" Width="80" TextAlign="TextAlign.Center" />
							<GridColumn Field=@nameof(SupplierModel.Name) HeaderText="Name" Width="180" />
							<GridColumn Field=@nameof(SupplierModel.GSTNo) HeaderText="GST No." Width="150" />
							<GridColumn Field=@nameof(SupplierModel.Code) HeaderText="Code" Width="120" />
							<GridColumn Field=@nameof(SupplierModel.Phone) HeaderText="Phone" Width="130" />
							<GridColumn Field=@nameof(SupplierModel.Email) HeaderText="Email" Width="180" />
							<GridColumn Field=@nameof(SupplierModel.Address) HeaderText="Address" Width="200" />
							<GridColumn Field=@nameof(SupplierModel.Status) HeaderText="Active" Width="100" DisplayAsCheckBox="true" TextAlign="TextAlign.Center" />
						</GridColumns>
					</SfGrid>
				</div>
			</div>
		</div>

		<div class="dashboard-footer">
			<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
		</div>
	</div>
}

<style>
	:root {
		--dotnet-primary: #512BD4;
		--dotnet-secondary: #68217A;
		--dotnet-accent: #00A4EF;
		--dotnet-light: #F7F7F7;
		--dotnet-dark: #1E1E1E;
	}

	/* General Layout */
	.supplier-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		padding: 20px;
		background: linear-gradient(135deg, rgba(81, 43, 212, 0.05) 0%, rgba(104, 33, 122, 0.05) 100%);
	}

	/* Page Header */
	.page-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 25px;
	}

	.page-title {
		color: var(--dotnet-secondary);
		font-size: 28px;
		font-weight: 700;
		margin: 0;
	}

	.back-button {
		background-color: transparent;
		border: 2px solid var(--dotnet-secondary);
		color: var(--dotnet-secondary);
		padding: 8px 16px;
		border-radius: 8px;
		cursor: pointer;
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		gap: 8px;
		transition: all 0.2s ease;
	}

		.back-button:hover {
			background-color: var(--dotnet-secondary);
			color: white;
		}

	.back-icon {
		font-size: 16px;
	}

	/* Content layout */
	.supplier-content {
		display: flex;
		flex-direction: column;
		gap: 25px;
		margin-bottom: 30px;
	}

	/* Cards */
	.selection-card, .grid-card {
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		overflow: hidden;
	}

	.card-header {
		background-color: var(--dotnet-light);
		padding: 15px 20px;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
	}

		.card-header h2 {
			margin: 0;
			color: var(--dotnet-secondary);
			font-size: 20px;
			font-weight: 600;
		}

	.card-info, .grid-info {
		margin: 5px 0 0 0;
		color: #666;
		font-size: 14px;
		font-style: italic;
	}

	.card-body {
		padding: 20px;
	}

	/* Form Layout */
	.form-row {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 20px;
		margin-bottom: 15px;
	}

	.form-group {
		margin-bottom: 10px;
	}

		.form-group.full-width {
			grid-column: 1 / -1;
		}

		.form-group label {
			display: block;
			margin-bottom: 8px;
			font-weight: 500;
			color: var(--dotnet-dark);
		}

	.form-control {
		width: 100%;
		border-radius: 6px;
	}

	.checkbox-container {
		margin-top: 10px;
	}

	.form-checkbox {
		margin-top: 5px;
	}

	/* Button Styles */
	.save-container {
		display: flex;
		justify-content: flex-end;
		margin-top: 20px;
	}

	.save-button {
		background-color: var(--dotnet-primary);
		color: white;
		border: none;
		padding: 12px 24px;
		border-radius: 8px;
		cursor: pointer;
		font-weight: 600;
		display: flex;
		align-items: center;
		gap: 8px;
		transition: all 0.2s ease;
	}

		.save-button:hover {
			background-color: #4311a8;
			transform: translateY(-2px);
		}

	.save-icon {
		font-size: 18px;
	}

	/* Grid Styling */
	.supplier-grid {
		width: 100%;
		border-radius: 8px;
		overflow: hidden;
	}

	/* Footer */
	.dashboard-footer {
		margin-top: auto;
		text-align: center;
		padding: 20px;
		color: #666;
		font-size: 14px;
	}

	.footer-link {
		color: var(--dotnet-primary);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

		.footer-link:hover {
			color: var(--dotnet-secondary);
			text-decoration: underline;
		}

	/* Loading Animation */
	.loader-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
	}

	.circular-dots-loader {
		position: relative;
		width: 60px;
		height: 60px;
		margin-bottom: 15px;
	}

		.circular-dots-loader .dot {
			position: absolute;
			width: 12px;
			height: 12px;
			border-radius: 50%;
			animation: rotate 1.5s infinite linear;
		}

		.circular-dots-loader .dot-1 {
			background-color: var(--dotnet-primary);
			animation-delay: 0s;
		}

		.circular-dots-loader .dot-2 {
			background-color: var(--dotnet-accent);
			animation-delay: -0.5s;
		}

		.circular-dots-loader .dot-3 {
			background-color: var(--dotnet-secondary);
			animation-delay: -1s;
		}

	.loading-text {
		color: var(--dotnet-dark);
		font-size: 16px;
		margin-top: 10px;
	}

	/* Toast styling */
	.e-toast-container {
		z-index: 1000;
	}

	.e-toast-success {
		border-left: 5px solid var(--dotnet-primary);
	}

	.e-toast-info {
		border-left: 5px solid var(--dotnet-accent);
	}

	/* Animations */
	@@keyframes rotate {
		0% {
			transform: rotate(0deg) translate(-24px) rotate(0deg);
		}

		100% {
			transform: rotate(360deg) translate(-24px) rotate(-360deg);
		}
	}

	/* Responsive Design */
	@@media (max-width: 768px) {
		.page-header {
			flex-direction: column;
			gap: 15px;
			align-items: flex-start;
		}

		.form-row {
			grid-template-columns: 1fr;
		}
	}
</style>