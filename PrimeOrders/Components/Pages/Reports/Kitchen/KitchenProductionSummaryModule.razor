	.edit-icon {
		width: 20px;
		height: 20px;
	}

	.delete-icon {
		width: 35px;
		height: 35px;
	}

	/* Action Buttons - Increased Height */
	.view-button {
		background-color: var(--dotnet-accent);
		color: white;
		border: none;
		padding: 16px 28px;
		border-radius: 10px;
		font-weight: 600;
		font-size: 15px;
