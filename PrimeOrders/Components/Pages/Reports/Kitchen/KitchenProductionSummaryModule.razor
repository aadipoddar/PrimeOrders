	}

	/* Dialog Header */
	.dialog-header {
		font-size: 20px;
		font-weight: 600;
		color: var(--dotnet-secondary);
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.kitchen-production-icon {
		font-size: 24px;
	}

	/* Dialog Content */
